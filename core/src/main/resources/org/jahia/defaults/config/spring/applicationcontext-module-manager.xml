<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="org.jahia.services.modulemanager.persistence.BundlePersister" class="org.jahia.services.modulemanager.persistence.jcr.BundlePersisterImpl"/>

    <bean id="ModuleManager" class="org.jahia.services.modulemanager.impl.ModuleManagerImpl">
        <property name="persister" ref="org.jahia.services.modulemanager.persistence.BundlePersister"/>
        <property name="templateManagerService" ref="JahiaTemplateManagerService" />
    </bean>
    
    <bean id="BundlePersistanceStorageInitializer" class="org.jahia.services.modulemanager.persistence.BundlePersistanceStorageInitializer">
        <property name="persister" ref="org.jahia.services.modulemanager.persistence.BundlePersister"/>
    </bean>

</beans>
