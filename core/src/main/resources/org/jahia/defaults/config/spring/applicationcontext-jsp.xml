<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

    <util:map id="jspConfig" key-type="java.lang.String" value-type="java.lang.String">
        <entry key="checkInterval" value="0"/>
        <entry key="development" value="auto"/>
        <entry key="keepgenerated" value="true"/>
        <entry key="saveBytecode" value="true"/>
        <entry key="trimSpaces" value="true"/>
    </util:map>
</beans>
