<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.jahia.workflow.nstep.model.WorkflowStep"
        table="jahia_nstep_workflowstep"
        lazy="false"
        dynamic-update="false"
        dynamic-insert="false"
        select-before-update="false"
        optimistic-lock="version"
    >

        <id
            name="id"
            column="id"
            type="java.lang.Long"
            unsaved-value="null"
        >
            <generator class="assigned">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-WorkflowStep.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="name"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="name"
            not-null="true"
        />

        <set
            name="workflowInstances"
            lazy="true"
            inverse="true"
            cascade="all"
            sort="unsorted"
        >

              <key
                  column="step"
              >
              </key>

              <one-to-many
                  class="org.jahia.workflow.nstep.model.WorkflowInstance"
              />

        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-WorkflowStep.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
