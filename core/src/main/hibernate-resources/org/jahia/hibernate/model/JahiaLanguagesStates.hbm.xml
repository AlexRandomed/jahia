<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.jahia.hibernate.model.JahiaLanguagesStates"
        table="jahia_languages_states"
        lazy="false"
        dynamic-update="false"
        dynamic-insert="false"
        select-before-update="false"
        optimistic-lock="version"
    >
        <cache usage="nonstrict-read-write" />

        <composite-id
            name="comp_id"
            class="org.jahia.hibernate.model.JahiaLanguagesStatesPK"
        >
                     <key-property
                        name="objectkey"
                        type="java.lang.String"
                        column="objectkey"
                        length="40"
                />

                     <key-property
                        name="languageCode"
                        type="java.lang.String"
                        column="language_code"
                        length="10"
                />

        </composite-id>

        <property
            name="workflowState"
            type="java.lang.Integer"
            update="true"
            insert="true"
            access="property"
            column="workflow_state"
        />

        <property
            name="siteID"
            type="java.lang.Integer"
            update="true"
            insert="true"
            access="property"
            column="siteid"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-JahiaLanguagesStates.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
