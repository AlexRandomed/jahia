<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.jahia.hibernate.model.JahiaAppDef"
        table="jahia_app_def"
        dynamic-update="false"
        dynamic-insert="false"
        select-before-update="false"
        optimistic-lock="version"
    >
        <cache usage="nonstrict-read-write" />

        <id
            name="id"
            column="id_jahia_app_def"
            type="java.lang.Integer"
        >
            <generator class="assigned">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-JahiaAppDef.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="name"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="name_jahia_app_def"
            length="250"
        />

        <property
            name="context"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="context_jahia_app_def"
            length="250"
        />

        <property
            name="visible"
            type="java.lang.Integer"
            update="true"
            insert="true"
            access="property"
            column="visible_jahia_app_def"
            length="11"
        />

        <property
            name="shared"
            type="java.lang.Integer"
            update="true"
            insert="true"
            access="property"
            column="shared_jahia_app_def"
            length="11"
        />

        <many-to-one
            name="jahiaAcl"
            class="org.jahia.hibernate.model.JahiaAcl"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            access="property"
        >
            <column
                name="rights_jahia_app_def" 
            />
        </many-to-one>

        <property
            name="filename"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="filename_jahia_app_def"
            length="250"
        />

        <property
            name="description"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="desc_jahia_app_def"
            length="250"
        />

        <property
            name="type"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="type_jahia_app_def"
            length="30"
        />

        <map
            name="properties"
            table="jahia_appdef_prop"
            lazy="true"
            sort="unsorted"
            inverse="true"
            cascade="delete"
        >

              <key
                  column="appdefid_appdef_prop"
              >
              </key>

              <index
                  column="propname_appdef_prop"
                  type="string"
              />

              <element
                  column="propvalue_appdef_prop"
                  type="string"
                  not-null="false"
                  unique="false"
              />

        </map>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-JahiaAppDef.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
