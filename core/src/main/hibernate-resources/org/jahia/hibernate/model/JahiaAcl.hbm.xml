<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.jahia.hibernate.model.JahiaAcl"
        table="jahia_acl"
        lazy="false"
        dynamic-update="false"
        dynamic-insert="false"
        select-before-update="false"
        optimistic-lock="version"
    >
        <cache usage="nonstrict-read-write" />

        <id
            name="id"
            column="id_jahia_acl"
            type="java.lang.Integer"
        >
            <generator class="assigned">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-JahiaAcl.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <set
            name="entries"
            lazy="true"
            inverse="true"
            cascade="delete"
            sort="unsorted"
        >

              <key
                  column="id_jahia_acl"
              >
              </key>

              <one-to-many
                  class="org.jahia.hibernate.model.JahiaAclEntry"
              />

        </set>

        <property
            name="inheritance"
            type="java.lang.Integer"
            update="true"
            insert="true"
            access="property"
            column="inheritance_jahia_acl"
            length="11"
        />

        <property
            name="hasEntries"
            type="java.lang.Integer"
            update="true"
            insert="true"
            access="property"
            column="hasentries_jahia_acl"
        />

        <property
            name="parentId"
            type="java.lang.Integer"
            update="true"
            insert="true"
            access="property"
            column="parent_id_jahia_acl"
        />

        <property
            name="pickedAclId"
            type="java.lang.Integer"
            update="true"
            insert="true"
            access="property"
            column="picked_id_jahia_acl"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-JahiaAcl.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
