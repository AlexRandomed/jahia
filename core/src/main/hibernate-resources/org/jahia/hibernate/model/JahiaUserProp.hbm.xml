<?xml version="1.0" encoding="UTF-8"?>


<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.jahia.hibernate.model.JahiaUserProp"
        table="jahia_user_prop"
        dynamic-update="false"
        dynamic-insert="false"
        select-before-update="false"
        optimistic-lock="version"
    >
        <cache usage="nonstrict-read-write" />

        <composite-id
            name="comp_id"
            class="org.jahia.hibernate.model.JahiaUserPropPK"
        >
                     <key-property
                        name="id"
                        type="java.lang.Integer"
                        column="id_jahia_users"
                        length="11"
                />

                     <key-property
                        name="name"
                        type="java.lang.String"
                        column="name_jahia_user_prop"
                        length="150"
                />

                     <key-property
                        name="provider"
                        type="java.lang.String"
                        column="provider_jahia_user_prop"
                        length="50"
                />

                     <key-property
                        name="userkey"
                        type="java.lang.String"
                        column="userkey_jahia_user_prop"
                        length="50"
                />

        </composite-id>

        <property
            name="value"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="value_jahia_user_prop"
            length="255"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-JahiaUserProp.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
