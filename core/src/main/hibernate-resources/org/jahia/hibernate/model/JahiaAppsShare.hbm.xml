<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.jahia.hibernate.model.JahiaAppsShare"
        table="jahia_apps_share"
        dynamic-update="false"
        dynamic-insert="false"
        select-before-update="false"
        optimistic-lock="version"
    >
        <cache usage="nonstrict-read-write" />

        <composite-id
            name="comp_id"
            class="org.jahia.hibernate.model.JahiaAppsSharePK"
        >

                    <key-many-to-one
                        name="definition"
                        class="org.jahia.hibernate.model.JahiaAppDef"
                        column="definition"
                    />

                    <key-many-to-one
                        name="site"
                        class="org.jahia.hibernate.model.JahiaSite"
                        column="site"
                    />

        </composite-id>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-JahiaAppsShare.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
