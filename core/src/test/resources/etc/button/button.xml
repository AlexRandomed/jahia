<buttons>
    <button-form name="engineGray">
        <font>
            <name>Verdana</name>
            <style>bold</style>
            <size>11</size>
        </font>
        <type>png</type>
        <min-width>50</min-width>
        <target>jsp/images</target>
        <authorize-multiline>true</authorize-multiline>
        <color text="FFFFFF" background="7C8E97" text_on="FFFFFF" background_on="455D72"/>
        <border path="WEB-INF/var/images/border"
                topBorder="2" leftBorder="12" bottomBorder="2" rightBorder="12"
                imageType="png">
            <image-top-left>top_left</image-top-left>
            <image-top-middle>top_middle</image-top-middle>
            <image-top-right>top_right</image-top-right>
            <image-middle-left>middle_left</image-middle-left>
            <image-middle-right>middle_right</image-middle-right>
            <image-bottom-left>bottom_left</image-bottom-left>
            <image-bottom-middle>bottom_middle</image-bottom-middle>
            <image-bottom-right>bottom_right</image-bottom-right>
        </border>
    </button-form>

    <button-form name="engineRed">
        <font>
            <name>Verdana</name>
            <style>bold</style>
            <size>11</size>
        </font>
        <type>png</type>
        <min-width>50</min-width>
        <target>jsp/images</target>
        <authorize-multiline>true</authorize-multiline>
        <color text="FFFFFF" background="B22927" text_on="FFFFFF" background_on="D04745"/>
        <border path="WEB-INF/var/images/border"
                topBorder="2" leftBorder="12" bottomBorder="2" rightBorder="12"
                imageType="png">
            <image-top-left>red_top_left</image-top-left>
            <image-top-middle>red_top_middle</image-top-middle>
            <image-top-right>red_top_right</image-top-right>
            <image-middle-left>red_middle_left</image-middle-left>
            <image-middle-right>red_middle_right</image-middle-right>
            <image-bottom-left>red_bottom_left</image-bottom-left>
            <image-bottom-middle>red_bottom_middle</image-bottom-middle>
            <image-bottom-right>red_bottom_right</image-bottom-right>
        </border>
    </button-form>

