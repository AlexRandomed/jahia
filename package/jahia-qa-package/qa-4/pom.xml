<?xml version="1.0" encoding="UTF-8"?>
<project>
    <parent>
        <groupId>org.jahia.server</groupId>
        <artifactId>jahia-qa-package</artifactId>
        <version>6.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>jahia-qa4</artifactId>
    <name>Jahia QA-4 Package</name>
    <packaging>pom</packaging>
    <dependencies>
        <dependency>
            <groupId>org.apache.tomcat</groupId>
            <artifactId>apache-tomcat</artifactId>
            <version>6.0.18-jahia</version>
            <type>tar.gz</type>
        </dependency>
        <dependency>
            <groupId>lambdaprobe</groupId>
            <artifactId>lambdaprobe</artifactId>
            <version>jahia-version</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>testsuite-jahia</groupId>
            <artifactId>testsuite-jahia</artifactId>
            <version>1.0</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>org.jahia.server</groupId>
            <artifactId>jahia-ear</artifactId>
            <version>${jahia.package.version}</version>
            <type>pom</type>
        </dependency>
    </dependencies>


    <profiles>
        <profile>
            <id>qa-4</id>

            <build>
                <plugins>


                    <!-- first QA server processing -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>lambdaprobe</groupId>
                                            <artifactId>lambdaprobe</artifactId>
                                            <version>jahia-version</version>
                                            <type>war</type>
                                            <overWrite>true</overWrite>
                                            <outputDirectory>${project.build.directory}/apache-tomcat-6.0.18/webapps</outputDirectory>
                                            <destFileName>probe.war</destFileName>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>testsuite-jahia</groupId>
                                            <artifactId>testsuite-jahia</artifactId>
                                            <version>1.0</version>
                                            <type>war</type>
                                            <overWrite>true</overWrite>
                                            <outputDirectory>${project.build.directory}/apache-tomcat-6.0.18/webapps</outputDirectory>
                                            <destFileName>testsuite-jahia.war</destFileName>
                                        </artifactItem>

                                    </artifactItems>
                                    <outputDirectory>${project.build.directory}/apache-tomcat-6.0.18/webapps</outputDirectory>
                                    <overWriteReleases>true</overWriteReleases>
                                    <overWriteSnapshots>true</overWriteSnapshots>
                                </configuration>
                            </execution>
                            <execution>
                                <id>unpack</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>unpack</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>org.apache.tomcat</groupId>
                                            <artifactId>apache-tomcat</artifactId>
                                            <version>6.0.18-jahia</version>
                                            <type>zip</type>
                                            <overWrite>false</overWrite>
                                            <outputDirectory>${project.build.directory}</outputDirectory>
                                            <excludes>**/webapps/examples/**,**/webapps/docs/**,**/webapps/ROOT/**</excludes>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>



                    <plugin>
                        <groupId>org.jahia.server</groupId>
                        <artifactId>maven-jahia-plugin</artifactId>
                        <configuration>
                            <targetServerType>tomcat</targetServerType>
                            <targetServerVersion>6</targetServerVersion>
                            <targetServerDirectory>${project.build.directory}/apache-tomcat-6.0.18</targetServerDirectory>
                        </configuration>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>deploy</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.jahia.server</groupId>
                        <artifactId>maven-jahia-plugin</artifactId>
                        <configuration>
                            <targetServerDirectory>${project.build.directory}/apache-tomcat-6.0.18</targetServerDirectory>
                            <cluster_activated>true</cluster_activated>
                            <siteImportLocation>
                                <!-- As it is not the processing node, we are not going to feed it any imports -->
                            </siteImportLocation>
                            <processingServer>false</processingServer>
                            <databaseUrl>jdbc:mysql://10.8.37.246/qa_cluster?useUnicode=true&amp;characterEncoding=UTF-8&amp;useServerPrepStmts=false</databaseUrl>
                            <databaseUsername>jahia</databaseUsername>
                            <databasePassword>jahia</databasePassword>
                            <overwritedb>false</overwritedb>
                            <storeFilesInDB>true</storeFilesInDB>
                            <cluster_node_serverId>qa-j4</cluster_node_serverId>
                            <localIp>10.8.37.244</localIp>
                            <clusterNodes>
                                <param>10.8.37.243</param>
                            </clusterNodes>
                        </configuration>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>configure</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>



                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.3</version>
                        <dependencies>
                            <dependency>
                                <groupId>org.apache.ant</groupId>
                                <artifactId>ant-jsch</artifactId>
                                <version>1.7.1</version>
                            </dependency>
                            <dependency>
                                <groupId>com.jcraft</groupId>
                                <artifactId>jsch</artifactId>
                                <version>0.1.38</version>
                            </dependency>
                        </dependencies>

                        <executions>
                            <execution>
                                <id>packaging</id>
                                <phase>package</phase>
                                <configuration>
                                    <tasks>
                                        <copy file="./src/main/resources/catalina.sh" tofile="${project.build.directory}/apache-tomcat-6.0.18/bin/catalina.sh" overwrite="true"/>
                                        <copy file="./src/main/resources/conf/server.xml" tofile="${project.build.directory}/apache-tomcat-6.0.18/conf/server.xml" overwrite="true"/>
                                        <copy file="./src/main/resources/conf/web.xml" tofile="${project.build.directory}/apache-tomcat-6.0.18/conf/web.xml" overwrite="true"/>
                                    </tasks>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>deploying</id>
                                <phase>install</phase>
                                <configuration>
                                    <tasks>
                                        <property name="distant.hosts.ip" value="10.8.37.244"/>
                                        <property name="distant.hosts.username" value="jahia"/>
                                        <property name="distant.hosts.password" value="jahia123"/>
                                        <sshexec host="${distant.hosts.ip}" username="${distant.hosts.username}" password="${distant.hosts.password}"
                                                 command="export JAVA_HOME=/usr/java/latest;/home/jahia/install/jahia/bin/catalina.sh stop -force"
                                                 trust="true" failonerror="false"/>
                                        <sshexec host="${distant.hosts.ip}" username="${distant.hosts.username}" password="${distant.hosts.password}"
                                                 command="rm -Rf /home/jahia/install/jahia" trust="true"
                                                 failonerror="false"/>
                                        <scp file="${project.build.directory}/${project.build.finalName}-jahia.tar.gz"
                                             todir="${distant.hosts.username}@${distant.hosts.ip}:/home/jahia/install" password="${distant.hosts.password}"
                                             trust="true"/>
                                        <sshexec host="${distant.hosts.ip}" username="${distant.hosts.username}" password="${distant.hosts.password}"
                                                 command="tar xfz /home/jahia/install/${project.build.finalName}-jahia.tar.gz --directory /home/jahia/install"
                                                 trust="true" failonerror="false"/>
                                        <sshexec host="${distant.hosts.ip}" username="${distant.hosts.username}" password="${distant.hosts.password}"
                                                 command="rm /home/jahia/install/${project.build.finalName}-jahia.tar.gz "
                                                 trust="true" failonerror="false"/>
                                        <sshexec host="${distant.hosts.ip}" username="${distant.hosts.username}" password="${distant.hosts.password}"
                                                 command="chmod 755 /home/jahia/install/jahia/bin/*.sh" trust="true"
                                                 failonerror="false"/>
                                        <sshexec host="${distant.hosts.ip}" username="${distant.hosts.username}" password="${distant.hosts.password}"
                                                 command="export JAVA_HOME=/usr/java/latest;/home/jahia/install/jahia/bin/catalina.sh start"
                                                 trust="true" failonerror="false"/>
                                    </tasks>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <configuration>
                            <descriptors>
                                <descriptor>src/main/assembly/src.xml</descriptor>
                            </descriptors>
                        </configuration>

                        <executions>
                            <execution>
                                <id>make-assembly</id> <!-- this is used for inheritance merges -->
                                <phase>package</phase> <!-- append to the packaging phase. -->
                                <goals>
                                    <goal>attached</goal> <!-- goals == mojos -->
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
