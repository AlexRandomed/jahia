<assembly>
  <id>jahia</id>
  <includeBaseDirectory>false</includeBaseDirectory>
  <formats>
    <format>tar.gz</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>${project.build.directory}/jboss-${jahia.jboss.version}</directory>
      <excludes>
        <exclude>**/*.sh</exclude>
        <exclude>bin/run.bat</exclude>
        <exclude>bin/run.conf</exclude>
        <exclude>server/default/conf/jboss-log4j.xml</exclude>
        <exclude>server/default/deploy/jboss-web.deployer/server.xml</exclude>
        <exclude>server/default/deploy/jboss-web.deployer/conf/web.xml</exclude>
      </excludes>
      <outputDirectory>Jahia_CE_v${jahia.package.version}_JBoss_${jahia.jboss.version}</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/jboss-${jahia.jboss.version}</directory>
      <includes><include>**/*.sh</include></includes>
      <fileMode>755</fileMode>
      <outputDirectory>Jahia_CE_v${jahia.package.version}_JBoss_${jahia.jboss.version}</outputDirectory>
    </fileSet>
  </fileSets>
  <files>
    <file>
        <source>src/main/resources/run.bat</source>
        <outputDirectory>Jahia_CE_v${jahia.package.version}_JBoss_${jahia.jboss.version}/bin</outputDirectory>
    </file>
    <file>
        <source>src/main/resources/run.conf</source>
        <outputDirectory>Jahia_CE_v${jahia.package.version}_JBoss_${jahia.jboss.version}/bin</outputDirectory>
    </file>
    <file>
        <source>src/main/resources/conf/server.xml</source>
        <outputDirectory>Jahia_CE_v${jahia.package.version}_JBoss_${jahia.jboss.version}/server/default/deploy/jboss-web.deployer</outputDirectory>
    </file>
    <file>
        <source>src/main/resources/conf/web.xml</source>
        <outputDirectory>Jahia_CE_v${jahia.package.version}_JBoss_${jahia.jboss.version}/server/default/deploy/jboss-web.deployer/conf</outputDirectory>
    </file>
    <file>
        <source>src/main/resources/conf/log4j.xml</source>
        <outputDirectory>Jahia_CE_v${jahia.package.version}_JBoss_${jahia.jboss.version}/server/default/conf</outputDirectory>
        <destName>jboss-log4j.xml</destName>
    </file>
    <file>
        <source>src/main/resources/conf/log4j.xml</source>
        <outputDirectory>Jahia_CE_v${jahia.package.version}_JBoss_${jahia.jboss.version}/server/default/deploy/${jahia.deploy.war.dirName}/WEB-INF/etc/config</outputDirectory>
    </file>
    <file>
        <source>${project.build.directory}/prepackagedSites/ACME.zip</source>
        <outputDirectory>Jahia_CE_v${jahia.package.version}_JBoss_${jahia.jboss.version}/server/default/deploy/${jahia.deploy.war.dirName}/WEB-INF/var/imports</outputDirectory>
        <destName>siteImport_ACME.zip</destName>
    </file>
    <file>
        <source>${project.build.directory}/prepackagedSites/testSite.zip</source>
        <outputDirectory>Jahia_CE_v${jahia.package.version}_JBoss_${jahia.jboss.version}/server/default/deploy/${jahia.deploy.war.dirName}/WEB-INF/var/imports</outputDirectory>
        <destName>siteImport_testSite.zip</destName>
    </file>
  </files>
</assembly>