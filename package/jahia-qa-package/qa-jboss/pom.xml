<?xml version="1.0" encoding="UTF-8"?>
<project>
    <parent>
        <groupId>org.jahia.server</groupId>
        <artifactId>jahia-qa-package</artifactId>
        <version>6.5-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>jahia-qa-jboss</artifactId>
    <name>Jahia JBoss QA Package</name>
    <packaging>pom</packaging>
    <dependencies>
        <dependency>
            <groupId>org.jahia.server</groupId>
            <artifactId>jahia-war</artifactId>
            <version>${jahia.package.version}</version>
            <classifier>${jahia.war.classifier}</classifier>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>org.jahia.server</groupId>
            <artifactId>jahia-jboss-config</artifactId>
            <version>${jahia.package.version}</version>
            <type>sar</type>
        </dependency>
    </dependencies>

    <properties>
        <distant.hosts.ip>10.8.37.252</distant.hosts.ip>
        <distant.hosts.username>jahia</distant.hosts.username>
        <distant.hosts.password>jahia</distant.hosts.password>
        <java.home>/usr/local/latest</java.home>
        <install.dir>/home/jahia/install</install.dir>
        <jboss.dir.name>Jahia_CE_v${jahia.package.version}_JBoss_${jahia.jboss.version}</jboss.dir.name>
        <jboss.dir>${install.dir}/${jboss.dir.name}</jboss.dir>
        <db.host>10.8.37.252</db.host>
        <db.schema>jahia</db.schema>
        <db.user>jahia</db.user>
        <db.password>jahia</db.password>
    </properties>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.1</version>
                <executions>
                    <execution>
                        <id>unpack</id>
                        <phase>package</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.jboss</groupId>
                                    <artifactId>jbossas</artifactId>
                                    <version>${jahia.jboss.version}-jdk6</version>
                                    <type>zip</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                    <excludes>**/docs/**,**/server/all/**,**/server/minimal/**,**/ROOT.war/**</excludes>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.jahia.server</groupId>
                                    <artifactId>jahia-jboss-config</artifactId>
                                    <version>${jahia.package.version}</version>
                                    <type>sar</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}/jboss-${jahia.jboss.version}/server/default/deploy/jahia-jboss-config.sar</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.jahia.server</groupId>
                                    <artifactId>jahia-war</artifactId>
                                    <version>${jahia.package.version}</version>
                                    <type>war</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}/jboss-${jahia.jboss.version}/server/default/deploy/${jahia.deploy.war.dirName}</outputDirectory>
                                    <excludes>**/WEB-INF/etc/config/log4j.xml,**/WEB-INF/lib/jboss-j2ee-*.jar,**/WEB-INF/lib/jstl-*.jar,**/WEB-INF/lib/standard-*.jar,**/WEB-INF/lib/ojdbc5-*.jar,**/WEB-INF/lib/orai18n-*.jar,**/WEB-INF/lib/sqljdbc-*.jar,**/WEB-INF/lib/mysql-connector-java-*.jar,**/WEB-INF/lib/derby-*.jar,**/WEB-INF/lib/derbyclient-*.jar,**/WEB-INF/lib/postgresql-*.jar</excludes>
                                </artifactItem>
                                <artifactItem>
						            <groupId>org.jahia.prepackagedsites</groupId>
						            <artifactId>webtemplates</artifactId>
						            <version>${jahia.package.version}</version>
						            <type>zip</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}/prepackagedSites</outputDirectory>
                                    <includes>ACME.zip</includes>
                                </artifactItem>
                                <artifactItem>
						            <groupId>org.jahia.prepackagedsites</groupId>
						            <artifactId>testSite</artifactId>
						            <version>${jahia.package.version}</version>
						            <type>zip</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}/prepackagedSites</outputDirectory>
                                    <includes>testSite.zip</includes>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>

                    <execution>
                        <id>copy</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>lambdaprobe</groupId>
                                    <artifactId>lambdaprobe</artifactId>
                                    <version>1.7b</version>
                                    <classifier>jahia-jboss</classifier>
                                    <type>war</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/jboss-${jahia.jboss.version}/server/default/deploy</outputDirectory>
                                    <destFileName>probe.war</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.jahia.server</groupId>
                                    <artifactId>pluto-testsuite</artifactId>
                                    <version>2.0.0</version>
                                    <type>war</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/jboss-${jahia.jboss.version}/server/default/deploy</outputDirectory>
                                    <destFileName>testsuite-jahia.war</destFileName>
                                </artifactItem>
                            </artifactItems>
                            <outputDirectory>${project.build.directory}/jboss-${jahia.jboss.version}/server/default/deploy</outputDirectory>
                            <overWriteReleases>true</overWriteReleases>
                            <overWriteSnapshots>true</overWriteSnapshots>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-testjar</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.jahia.server</groupId>
                                    <artifactId>jahia-test</artifactId>
                                    <version>${jahia.package.version}</version>
                                    <type>jar</type>
                                </artifactItem>
                            </artifactItems>
                            <outputDirectory>${project.build.directory}/jboss-${jahia.jboss.version}/server/default/deploy/${jahia.deploy.war.dirName}/WEB-INF/lib</outputDirectory>
                            <overWriteReleases>true</overWriteReleases>
                            <overWriteSnapshots>true</overWriteSnapshots>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.jahia.server</groupId>
                <artifactId>maven-jahia-plugin</artifactId>
                <configuration>
                    <targetServerDirectory>${project.build.directory}/jboss-${jahia.jboss.version}</targetServerDirectory>
                    <targetConfigurationDirectory>${project.build.directory}/jboss-${jahia.jboss.version}</targetConfigurationDirectory>
                    <targetServerType>jboss</targetServerType>
                    <targetServerVersion>4.2.x</targetServerVersion>
                    <!--
                    <siteImportLocation>
                        <param>/home/bamboo/bin/siteImport_testSite.zip</param>
                        <param>/home/bamboo/bin/siteImport_DemoSite.zip</param>
                    </siteImportLocation>
                     -->
                    <cluster_activated>false</cluster_activated>
                    <processingServer>true</processingServer>
                    <databaseType>mysql</databaseType>
                    <databaseUrl>jdbc:mysql://${db.host}/${db.schema}?useUnicode=true&amp;characterEncoding=UTF-8&amp;useServerPrepStmts=false</databaseUrl>
                    <databaseUsername>${db.user}</databaseUsername>
                    <databasePassword>${db.password}</databasePassword>
                    <overwritedb>true</overwritedb>
                    <storeFilesInDB>true</storeFilesInDB>
                    <localIp>${distant.hosts.ip}</localIp>
                    <jahiaRootPassword>rootroot</jahiaRootPassword>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>configure</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <finalName>Jahia_CE_v${jahia.package.version}_JBoss_${jahia.jboss.version}</finalName>
                    <descriptors>
                        <descriptor>src/main/assembly/src.xml</descriptor>
                    </descriptors>
                    <tarLongFileMode>gnu</tarLongFileMode>
                </configuration>

                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.3</version>
                <dependencies>
                    <dependency>
                        <groupId>org.apache.ant</groupId>
                        <artifactId>ant-jsch</artifactId>
                        <version>1.7.1</version>
                    </dependency>
                    <dependency>
                        <groupId>com.jcraft</groupId>
                        <artifactId>jsch</artifactId>
                        <version>0.1.38</version>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <id>deploying</id>
                        <phase>install</phase>
                        <configuration>
                            <tasks>
								<echo message="Shutting JBoss server down..."/>
                                <sshexec host="${distant.hosts.ip}" username="${distant.hosts.username}" password="${distant.hosts.password}"
                                         command="export JAVA_HOME=${java.home};cd ${jboss.dir};./bin/shutdown.sh -S --server=${distant.hosts.ip}:1099"
                                         trust="true" failonerror="false"/>
								<waitfor maxwait="180" maxwaitunit="second" checkevery="5" checkeveryunit="second" timeoutproperty="jboss.shutdown.timeout">
									<not>
										<socket server="${distant.hosts.ip}" port="1099"/>
									</not>
								</waitfor>
								<fail message="Timeout reached trying to stop JBoss instance on ${distant.hosts.ip}" if="jboss.shutdown.timeout"/>
								<echo message="...JBoss shutdown complete"/>
                                <sshexec host="${distant.hosts.ip}" username="${distant.hosts.username}" password="${distant.hosts.password}"
                                         command="rm -Rf ${jboss.dir}" trust="true"
                                         failonerror="false"/>
								<echo message="Uploading ${jboss.dir.name}-jahia.tar.gz"/>
                                <scp file="${project.build.directory}/${jboss.dir.name}-jahia.tar.gz"
                                         todir="${distant.hosts.username}@${distant.hosts.ip}:${install.dir}" password="${distant.hosts.password}"
                                         trust="true"/>
								<echo message="${jboss.dir.name}-jahia.tar.gz uploaded successfully. Unpacking..."/>
                                <sshexec host="${distant.hosts.ip}" username="${distant.hosts.username}" password="${distant.hosts.password}"
                                         command="tar xfz ${install.dir}/${jboss.dir.name}-jahia.tar.gz --directory ${install.dir}"
                                         trust="true" failonerror="true"/>
                                <sshexec host="${distant.hosts.ip}" username="${distant.hosts.username}" password="${distant.hosts.password}"
                                         command="rm ${install.dir}/${jboss.dir.name}-jahia.tar.gz"
                                         trust="true" failonerror="false"/>
								<echo message="Starting JBoss server up..."/>
                                <sshexec host="${distant.hosts.ip}" username="${distant.hosts.username}" password="${distant.hosts.password}"
                                         command="export JAVA_HOME=${java.home};cd ${jboss.dir};mkdir -p server/default/log;nohup ./bin/run.sh -b ${distant.hosts.ip} &lt;/dev/null &gt; ${jboss.dir}/server/default/log/output.log 2&gt;&amp;1 &amp;"
                                         trust="true" failonerror="false"
                                         timeout="120000"/>
								<waitfor maxwait="180" maxwaitunit="second" checkevery="5" checkeveryunit="second" timeoutproperty="jboss.startup.timeout">
									<socket server="${distant.hosts.ip}" port="1099"/>
								</waitfor>
								<fail message="Timeout reached trying to start JBoss instance up on ${distant.hosts.ip}" if="jboss.startup.timeout"/>
								<echo message="...JBoss server started successfully"/>
							</tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>
</project>
