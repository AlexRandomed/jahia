<?xml version="1.0" encoding="UTF-8"?>
<shortcuts>
    <skipIfNotSupported/>
    <programGroup defaultName="${product.name} ${product.version}" location="applications"/>
    
<!-- Documentation -->
    <shortcut
        name="Jahia Readme"
        subgroup="\Documentation"
        description="Open the Jahia README file"
        target="${jahia.war.target.path}\html\startup\readme.html"
        programGroup="yes"
        encoding="UTF-8">
        <createForPack name="Apache Tomcat"/>
    </shortcut>
    <shortcut
        name="Jahia Community Web Site"
        subgroup="\Documentation"
        description="Opens the Jahia Community Web site"
        target="$INSTALL_PATH\bin\JahiaCommunity.URL"
        iconFile="%SystemRoot%\system32\shell32.dll"
        iconIndex="13"
        programGroup="yes"
        encoding="UTF-8">
    </shortcut>
    <shortcut
        name="Jahia Company Web Site"
        subgroup="\Documentation"
        description="Opens the Jahia Company Web site"
        target="$INSTALL_PATH\bin\JahiaCorporate.URL"
        iconFile="%SystemRoot%\system32\shell32.dll"
        iconIndex="13"
        programGroup="yes"
        encoding="UTF-8">
    </shortcut>
    <shortcut
        name="Jahiapedia"
        subgroup="\Documentation"
        description="Opens the Jahiapedia page on the Jahia Community Web site"
        target="$INSTALL_PATH\bin\Jahiapedia.URL"
        iconFile="%SystemRoot%\system32\shell32.dll"
        iconIndex="13"
        programGroup="yes"
        encoding="UTF-8">
    </shortcut>
    <shortcut
        name="Issue Tracking"
        subgroup="\Documentation"
        description="Opens the Issue Tracking system"
        target="$INSTALL_PATH\bin\IssueTrackingCommunity.URL"
        iconFile="%SystemRoot%\system32\shell32.dll"
        iconIndex="13"
        programGroup="yes"
        encoding="UTF-8">
    </shortcut>
    
<!-- Shortcuts -->
    <shortcut
        name="Jahia"
        subgroup="\Shortcuts (only when Jahia is running)"
        description="Open the Jahia welcome page (running on localhost)"
        target="$INSTALL_PATH\bin\StartJahia.URL"
        iconFile="$INSTALL_PATH\bin\jahia.ico"
        iconIndex="0"
        programGroup="yes"
        encoding="UTF-8">
        <createForPack name="Apache Tomcat"/>
    </shortcut>
    <shortcut
        name="Jahia Administration"
        subgroup="\Shortcuts (only when Jahia is running)"
        description="Open the Jahia Administration page (running on localhost)"
        target="$INSTALL_PATH\bin\StartJahiaAdministration.URL"
        iconFile="$INSTALL_PATH\bin\jahia.ico"
        iconIndex="0"
        programGroup="yes"
        encoding="UTF-8">
        <createForPack name="Apache Tomcat"/>
    </shortcut>

<!-- Start/stop Tomcat -->    
    <shortcut
        name="Start Jahia"
        target="$INSTALL_PATH\startJahia.bat"
        commandLine=""
        workingDirectory="$INSTALL_PATH\"
        description="This starts the Jahia Community Edition Server"
        initialState="normal"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        startup="no"
        iconFile="$INSTALL_PATH\bin\start.ico"
        iconIndex="0"
        encoding="UTF-8">
        <createForPack name="Apache Tomcat"/>
    </shortcut>
    <shortcut
        name="Stop Jahia"
        target="$INSTALL_PATH\stopJahia.bat"
        commandLine=""
        workingDirectory="$INSTALL_PATH\"
        description="This stops the Jahia Community Edition Server"
        initialState="normal"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        iconFile="$INSTALL_PATH\bin\stop.ico"
        iconIndex="0"
        startup="no"
        encoding="UTF-8">
        <createForPack name="Apache Tomcat"/>
    </shortcut>

<!-- Uninstaller -->    
    <shortcut
        name="Uninstall Jahia"
        description="This removes the Jahia Community Edition Server from your system"
        target="$JAVA_HOME\bin\java.exe"
        commandLine="-jar $INSTALL_PATH\Uninstaller\uninstaller.jar"
        initialState="noShow"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        iconFile="%SystemRoot%\system32\shell32.dll"
        iconIndex="31"
        type="Application"
        encoding="UTF-8">
    </shortcut>
    
</shortcuts>
