<?xml version="1.0" encoding="UTF-8"?>
<shortcuts>
    <skipIfNotSupported/>
    <programGroup defaultName="${product.name} ${product.version}" location="applications"/>
    
    <shortcut
        name="Start Jahia"
        target="$INSTALL_PATH\startJahia.bat"
        commandLine=""
        workingDirectory="$INSTALL_PATH\"
        description="This starts the Jahia Community Edition Server"
        initialState="normal"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        startup="no"
        iconFile="$INSTALL_PATH\bin\start.ico"
        iconIndex="0"
        encoding="UTF-8">
        <createForPack name="Apache Tomcat"/>
    </shortcut>

    <shortcut
        name="Stop Jahia"
        target="$INSTALL_PATH\stopJahia.bat"
        commandLine=""
        workingDirectory="$INSTALL_PATH\"
        description="This stops the Jahia Community Edition Server"
        initialState="normal"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        iconFile="$INSTALL_PATH\bin\stop.ico"
        iconIndex="0"
        startup="no"
        encoding="UTF-8">
        <createForPack name="Apache Tomcat"/>
    </shortcut>

    <shortcut
        name="Uninstall Jahia"
        description="This removes the Jahia Community Edition Server from your system"
        target="java"
        commandLine="-jar &quot;$INSTALL_PATH/Uninstaller/uninstaller.jar&quot;"
        initialState="noShow"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        iconFile="%SystemRoot%\system32\shell32.dll"
        iconIndex="31"
        type="Application"
        encoding="UTF-8">
    </shortcut>
