<?xml version="1.0" encoding="UTF-8"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
version="1.0"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd
http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd">

    <portlet>
        <description>Jahia Content Portlet - files</description>
        <portlet-name>JahiaContentPortletFiles</portlet-name>
        <display-name>Jahia Content Portlet Files</display-name>
        <portlet-class>org.jahia.portlets.JahiaContentPortlet</portlet-class>
        <init-param>
            <name>rootPath</name>
            <value>/WEB-INF/fragments/files</value>
        </init-param>
        <init-param>
            <name>portletType</name>
            <value>jnt:contentPortlet</value>
        </init-param>
        <init-param>
            <name>contentType</name>
            <value>jnt:filesPortlet</value>
        </init-param>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
        </supports>
        <portlet-info>
            <title>About Apache Pluto</title>
        </portlet-info>
    </portlet>


</portlet-app>

