<?xml version="1.0" encoding="UTF-8"?>
<project>
    <parent>
        <groupId>org.jahia.server</groupId>
        <artifactId>jahia-package</artifactId>
        <version>6.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>jahia-tgz-package</artifactId>
    <name>New configuration wizard Packaging module</name>
    <packaging>pom</packaging>
    <scm>
        <connection>scm:svn:http://10.8.37.111/svn/jahia/branches/JAHIA-6-0-BRANCH/</connection>
        <developerConnection>scm:svn:http://10.8.37.111/svn/jahia/branches/JAHIA-6-0-BRANCH/</developerConnection>
        <url>http://10.8.37.111/svn/jahia/branches/JAHIA-6-0-BRANCH</url>
    </scm>

    <dependencies>
        <dependency>
            <groupId>org.apache.tomcat</groupId>
            <artifactId>apache-tomcat</artifactId>
            <version>6.0.18-jahia</version>
            <type>tar.gz</type>
        </dependency>
        <dependency>
            <groupId>org.jahia.server</groupId>
            <artifactId>configwizard-ear</artifactId>
            <version>6.0-SNAPSHOT</version>
            <type>pom</type>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack</id>
                        <phase>package</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.apache.tomcat</groupId>
                                    <artifactId>apache-tomcat</artifactId>
                                    <version>6.0.18-jahia</version>
                                    <type>zip</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                    <excludes>
                                        **/webapps/examples/**,**/webapps/docs/**,**/webapps/ROOT/**,*/LICENSE,*/NOTICE,*/RELEASE-NOTES,*/RUNNING.txt
                                    </excludes>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.jahia.server</groupId>
                <artifactId>maven-jahia-plugin</artifactId>
                <configuration>
                    <targetServerType>tomcat</targetServerType>
                    <targetServerVersion>6</targetServerVersion>
                    <targetServerDirectory>${project.build.directory}/apache-tomcat-6.0.18</targetServerDirectory>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>deploy</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>maven-buildnumber-plugin</artifactId>
                <version>0.9.6</version>
                <executions>
                    <execution>
                        <phase>validate</phase>
                        <goals>
                            <goal>create</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <doCheck>false</doCheck>
                    <doUpdate>false</doUpdate>
                </configuration>
            </plugin>


            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.3</version>
                <dependencies>
                    <dependency>
                        <groupId>org.apache.ant</groupId>
                        <artifactId>ant-jsch</artifactId>
                        <version>1.7.1</version>
                    </dependency>
                    <dependency>
                        <groupId>com.jcraft</groupId>
                        <artifactId>jsch</artifactId>
                        <version>0.1.38</version>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <configuration>
                            <tasks>
                                <copy file="./src/resources/catalina.bat"
                                      tofile="${project.build.directory}/apache-tomcat-6.0.18/bin/catalina.bat"
                                      overwrite="true"/>
                                <copy file="./src/resources/catalina.sh"
                                      tofile="${project.build.directory}/apache-tomcat-6.0.18/bin/catalina.sh"
                                      overwrite="true"/>
                                <copy todir="${project.build.directory}/apache-tomcat-6.0.18/" overwrite="true">
                                    <fileset dir="./src/resources/startJahia/"/>
                                </copy>
                                <copy todir="${project.build.directory}/apache-tomcat-6.0.18/licenses" overwrite="true">
                                    <fileset dir="./src/resources/licenses/"/>
                                </copy>
                                <copy file="./src/resources/README.txt"
                                      todir="${project.build.directory}/apache-tomcat-6.0.18"/>
                                <copy file="./src/resources/LICENSE"
                                      todir="${project.build.directory}/apache-tomcat-6.0.18"/>
                                <copy file="./src/resources/conf/server.xml"
                                      tofile="${project.build.directory}/apache-tomcat-6.0.18/conf/server.xml"
                                      overwrite="true"/>
                                <copy file="./src/resources/conf/web.xml"
                                      tofile="${project.build.directory}/apache-tomcat-6.0.18/conf/web.xml"
                                      overwrite="true"/>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <buildNumber>${buildNumber}</buildNumber>
                    <descriptors>
                        <descriptor>src/main/assembly/src.xml</descriptor>
                    </descriptors>
                </configuration>

                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>install</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>

            </plugin>


        </plugins>
    </build>
</project>
