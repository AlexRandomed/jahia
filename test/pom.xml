    </dependencies>
    <profiles>
        <profile>
            <id>testJahia</id>
            <build>
                <resources>
                    <resource>
                        <directory>src/main/resources</directory>
                    </resource>
                    <resource>
                        <directory>target/jasper</directory>
                    </resource>
                </resources>

                <plugins>
                    <plugin>
                        <groupId>org.jahia.server</groupId>
                        <artifactId>maven-jahia-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>run-test</id>
                                <phase>integration-test</phase>
                                <goals>
                                    <goal>test</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>configure</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>configure</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.3</version>
                        <dependencies>
                            <dependency>
                                <groupId>org.apache.ant</groupId>
                                <artifactId>ant-jsch</artifactId>
                                <version>1.7.1</version>
                            </dependency>
                            <dependency>
                                <groupId>com.jcraft</groupId>
                                <artifactId>jsch</artifactId>
                                <version>0.1.38</version>
                            </dependency>
                        </dependencies>
                        <executions>
                            <execution>
                                <id>start-tomcat</id>
                                <phase>pre-integration-test</phase>
                                <configuration>
                                    <tasks>
                                        <echo message="Starting tomcat"/>
                                        <copy file="${project.build.directory}/${project.build.finalName}.jar" toDir="${jahia.deploy.targetServerDirectory}/webapps/${jahia.deploy.war.dirName}/WEB-INF/lib"/>
                                        <delete>
                                            <fileset dir="${jahia.deploy.targetServerDirectory}/logs" includes="**/*"/>
                                        </delete>
                                        <exec executable="${jahia.deploy.targetServerDirectory}/bin/catalina.sh"
                                              dir="${jahia.deploy.targetServerDirectory}/bin">
                                            <arg value="start"/>
                                        </exec>
                                        <echo message="Sleeping while tomcat is starting..."/>
                                        <sleep seconds="45"/>
                                    </tasks>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>stop-tomcat</id>
                                <phase>post-integration-test</phase>
                                <configuration>
                                    <tasks>
                                        <echo message="Stopping tomcat"/>
                                        <exec executable="${jahia.deploy.targetServerDirectory}/bin/catalina.sh"
                                              dir="${jahia.deploy.targetServerDirectory}/bin">
                                            <arg value="stop"/>
                                            <arg value="-force"/>
                                        </exec>
                                        <echo message="Undeploying jahia"/>
                                        <delete dir="${jahia.deploy.targetServerDirectory}/webapps/${jahia.deploy.war.dirName}"/>
                                        <mkdir dir="${project.build.directory}/tomcatLogs"/>
                                        <copy file="${jahia.deploy.targetServerDirectory}/logs/catalina.out" toDir="${project.build.directory}/tomcatLogs"/>
                                    </tasks>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                            <!--execution>
                                <id>start-jmeter-test</id>
                                <phase>integration-test</phase>
                                <configuration>
                                    <tasks>
                                        <echo message="Starting jmeter"/>
                                        <exec executable="${jahia.test.jmeter.path}/bin/runTestPlan.sh"
                                              dir="${jahia.test.jmeter.path}/bin"/>
                                    </tasks>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution-->
                        </executions>
                    </plugin>
