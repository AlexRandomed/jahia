      <NewsLines>
        <HeadLine>Kerry to keep convention momentum rolling</HeadLine>
        
        <DateLine>BOSTON (AFP)</DateLine>
        <CopyrightLine>© 2004 AFP</CopyrightLine>
      </NewsLines>
      <AdministrativeMetadata>
        <Provider>
          <Party FormalName="AFP"/>
