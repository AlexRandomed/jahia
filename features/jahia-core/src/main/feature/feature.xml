<features name="jahia-${project.version}" xmlns="http://karaf.apache.org/xmlns/features/v1.3.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://karaf.apache.org/xmlns/features/v1.3.0 http://karaf.apache.org/xmlns/features/v1.3.0">

    <!-- NB: this file is not the one really used. This file is used by the karaf-maven-plugin to define the start-level of bundles in the generated feature.xml -->

    <feature name="jahia-gemini-blueprint" description="Gemini Blueprint Extender" version="${gemini.blueprint.version}">
        <bundle start-level="30">mvn:org.eclipse.gemini/org.eclipse.gemini.blueprint.io/${gemini.blueprint.version}</bundle>
        <bundle start-level="30">mvn:org.eclipse.gemini/org.eclipse.gemini.blueprint.core/${gemini.blueprint.version}</bundle>
        <bundle start-level="30">mvn:org.eclipse.gemini/org.eclipse.gemini.blueprint.extender/${gemini.blueprint.version}</bundle>
        <capability>
            osgi.extender; osgi.extender="osgi.blueprint";uses:="org.osgi.service.blueprint.container,org.osgi.service.blueprint.reflect";version:Version="1.0"
        </capability>
    </feature>


    <feature name="jahia-core" description="Jahia Core OSGi bundles" version="${project.version}">
        <details>Jahia Base Package</details>
        <feature>jahia-gemini-blueprint</feature>
        <feature>shell</feature>
        <feature prerequisite="true" dependency="false">wrap</feature>
        <bundle start-level="30">mvn:org.apache.felix/org.apache.felix.http.api/${felix.http.version}</bundle>
        <bundle start-level="30">mvn:commons-io/commons-io/2.4</bundle>
        <bundle start-level="30">mvn:commons-fileupload/commons-fileupload/1.2.2</bundle>
        <bundle start-level="30">mvn:org.apache.felix/org.apache.felix.webconsole/4.2.8</bundle>
        <bundle start-level="30">mvn:org.ops4j.pax.web/pax-web-api/3.0.7</bundle>
        <bundle start-level="30">mvn:org.ops4j.pax.web/pax-web-jsp/3.0.7-jahia3</bundle>
        <bundle start-level="30">mvn:org.jahia.bundles/org.jahia.bundles.blueprint.extender.config/${project.version}</bundle>
        <bundle start-level="30">mvn:org.jahia.bundles/org.jahia.bundles.extender.jahiamodules/${project.version}</bundle>
        <bundle start-level="30">mvn:org.jahia.bundles/org.jahia.bundles.http.bridge/${project.version}</bundle>
        <bundle start-level="30">mvn:org.jahia.bundles/org.jahia.bundles.webconsole.config/${project.version}</bundle>
        <!--bundle start-level="30">mvn:org.jahia.bundles/org.jahia.bundles.slf4j.loglistener/${project.version}</bundle-->
        <bundle start-level="30">mvn:org.jahia.bundles/org.jahia.bundles.configadmin.persistence/${project.version}</bundle>
        <bundle start-level="30">mvn:org.jahia.server/jahia-taglib/${project.version}</bundle>
        <bundle start-level="30">mvn:org.jahia.bundles/org.jahia.bundles.jspapiusage.repackaging/${project.version}</bundle>
        <bundle start-level="30">mvn:org.jahia.configuration/osgi-tools/${jahia.plugin.version}</bundle>
        <bundle start-level="30">mvn:org.jahia.configuration/migrators/${jahia.plugin.version}</bundle>
        <bundle start-level="30">mvn:biz.aQute/bndlib/2.0.0.20130123-133441</bundle>
    </feature>

    <feature name="jahia-jax-rs" description="Jahia JAX RS Package" version="${project.version}">
        <details>Jahia JAX RS Package</details>
        <feature>jahia-core</feature>
        <bundle start-level="30">mvn:org.glassfish.jersey.bundles/jaxrs-ri/2.18</bundle>
        <bundle start-level="30">mvn:org.glassfish.jersey.bundles.repackaged/jersey-guava/2.18</bundle>
        <bundle start-level="30">mvn:org.glassfish.jersey.media/jersey-media-multipart/2.18</bundle>
        <bundle start-level="30">mvn:org.glassfish.hk2/hk2-api/2.4.0-b25</bundle>
        <bundle start-level="30">mvn:org.glassfish.hk2/hk2-locator/2.4.0-b25</bundle>
        <bundle start-level="30">mvn:org.glassfish.hk2/hk2-utils/2.4.0-b25</bundle>
        <bundle start-level="30">mvn:org.glassfish.hk2/osgi-resource-locator/1.0.1</bundle>
        <bundle start-level="30">mvn:org.glassfish.hk2.external/asm-all-repackaged/2.4.0-b25</bundle>
        <bundle start-level="30">mvn:org.jboss.spec.javax.annotation/jboss-annotations-api_1.2_spec/1.0.0.Final</bundle>
        <bundle start-level="30">mvn:org.jvnet.mimepull/mimepull/1.9.4</bundle>
    </feature>

    <feature name="jahia-clustering" version="${project.version}">
        <feature>jahia-core</feature>
        <feature>cellar</feature>
    </feature>

</features>
