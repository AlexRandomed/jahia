<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>org.jahia.server</groupId>
        <artifactId>jahia-root</artifactId>
        <version>6.6.0.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.jahia.modules</groupId>
    <artifactId>jahia-modules</artifactId>
    <name>Jahia Modules</name>
    <packaging>pom</packaging>

    <repositories>
        <repository>
            <id>jahiaRepository</id>
            <name>Jahia's Maven Repository</name>
            <url>http://maven.jahia.org/maven2</url>
        </repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <id>jahiaRepository</id>
            <name>Jahia's Maven Repository</name>
            <url>http://maven.jahia.org/maven2</url>
        </pluginRepository>
    </pluginRepositories>
    
    <dependencies>
        <!--Cross project dependencies-->
        <dependency>
            <groupId>org.jahia.server</groupId>
            <artifactId>jahia-impl</artifactId>
            <version>6.6.0.0-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.jahia.server</groupId>
            <artifactId>jahia-taglib</artifactId>
            <version>6.6.0.0-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>
    <profiles>
        <profile>
            <id>eclipse-integration</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-eclipse-plugin</artifactId>
                        <version>${eclipse.plugin.version}</version>
                        <configuration>
                            <wtpversion>1.5</wtpversion>
                            <additionalProjectnatures>
                                <projectnature>org.eclipse.wst.common.project.facet.core.nature</projectnature>
                                <projectnature>org.eclipse.wst.common.modulecore.ModuleCoreNature</projectnature>
                                <projectnature>org.eclipse.jem.workbench.JavaEMFNature</projectnature>
                            </additionalProjectnatures>
                            <additionalBuildcommands>
                                <buildCommand>
                                    <name>org.eclipse.wst.common.project.facet.core.builder</name>
                                    <arguments />
                                </buildCommand>
                                <buildCommand>
                                    <name>org.eclipse.wst.validation.validationbuilder</name>
                                    <arguments />
                                </buildCommand>
                            </additionalBuildcommands>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>all-templates-docs</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-site-plugin</artifactId>
                        <version>${site.plugin.version}</version>
                        <executions>
                            <execution>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>stage</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>module-docs</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-site-plugin</artifactId>
                        <version>${site.plugin.version}</version>
                        <executions>
                            <execution>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>site</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>docsite</id>
            <activation>
                <property>
                    <name>documentation</name>
                </property>
            </activation>
            <modules>
                <module>assets</module>
                <module>default</module>
                <module>facets</module>
                <module>grid</module>
                <module>macros</module>
                <module>search</module>
                <module>skins</module>
                <module>tasks</module>
                <module>templates-system</module>
                <module>visibility</module>
            </modules>
        </profile>
        <profile>
            <id>nodocsite</id>
            <activation>
                <property>
                    <name>!documentation</name>
                </property>
            </activation>
            <modules>
                <module>assets</module>
                <module>contentRetrieval</module>
                <module>contribute</module>
                <module>default</module>
                <module>facets</module>
                <module>grid</module>
                <module>macros</module>
                <module>profile</module>
                <module>search</module>
                <module>skins</module>
                <module>tabularList</module>
                <module>tags</module>
                <module>tasks</module>
                <module>templates-system</module>
                <module>visibility</module>
            </modules>
        </profile>
        
        <profile>
            <id>checkout-forge-modules</id>
            <!-- when using this profile, use '-N' option to not checkout in every submodule -->
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-scm-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>checkout-modules-set</id>
                                <phase>pre-clean</phase>
                                <goals>
                                    <goal>checkout</goal>
                                </goals>
                                <configuration>
                                    <checkoutDirectory>forge-modules-set</checkoutDirectory>
                                    <connectionUrl>scm:git:git@github.com:Jahia/modules-set</connectionUrl>
                                    <skipCheckoutIfExists>true</skipCheckoutIfExists>
                                </configuration>
                            </execution>
                            <execution>
                                <id>checkout-templates-set</id>
                                <phase>pre-clean</phase>
                                <goals>
                                    <goal>checkout</goal>
                                </goals>
                                <configuration>
                                    <checkoutDirectory>forge-templates-set</checkoutDirectory>
                                    <connectionUrl>scm:git:git@github.com:Jahia/templates-set</connectionUrl>
                                    <skipCheckoutIfExists>true</skipCheckoutIfExists>
                                </configuration>
                            </execution>
                            <execution>
                                <id>checkout-JahiApp-Blog</id>
                                <phase>pre-clean</phase>
                                <goals>
                                    <goal>checkout</goal>
                                </goals>
                                <configuration>
                                    <checkoutDirectory>forge-blog</checkoutDirectory>
                                    <connectionUrl>scm:git:git@github.com:Jahia/JahiApp-Blog</connectionUrl>
                                    <skipCheckoutIfExists>true</skipCheckoutIfExists>
                                </configuration>
                            </execution>
                            <execution>
                                <id>checkout-JahiApp-Forum</id>
                                <phase>pre-clean</phase>
                                <goals>
                                    <goal>checkout</goal>
                                </goals>
                                <configuration>
                                    <checkoutDirectory>forge-forum</checkoutDirectory>
                                    <connectionUrl>scm:git:git@github.com:Jahia/JahiApp-Forum</connectionUrl>
                                    <skipCheckoutIfExists>true</skipCheckoutIfExists>
                                </configuration>
                            </execution>
                            <execution>
                                <id>checkout-JahiApp-MyConnections</id>
                                <phase>pre-clean</phase>
                                <goals>
                                    <goal>checkout</goal>
                                </goals>
                                <configuration>
                                    <checkoutDirectory>forge-my-connections</checkoutDirectory>
                                    <connectionUrl>scm:git:git@github.com:Jahia/JahiApp-MyConnections</connectionUrl>
                                    <skipCheckoutIfExists>true</skipCheckoutIfExists>
                                </configuration>
                            </execution>
                            <execution>
                                <id>checkout-JahiApp-MyPortal</id>
                                <phase>pre-clean</phase>
                                <goals>
                                    <goal>checkout</goal>
                                </goals>
                                <configuration>
                                    <checkoutDirectory>forge-my-portal</checkoutDirectory>
                                    <connectionUrl>scm:git:git@github.com:Jahia/JahiApp-MyPortal</connectionUrl>
                                    <skipCheckoutIfExists>true</skipCheckoutIfExists>
                                </configuration>
                            </execution>
                            <execution>
                                <id>checkout-JahiApp-Newsletter</id>
                                <phase>pre-clean</phase>
                                <goals>
                                    <goal>checkout</goal>
                                </goals>
                                <configuration>
                                    <checkoutDirectory>forge-newsletter</checkoutDirectory>
                                    <connectionUrl>scm:git:git@github.com:Jahia/JahiApp-Newsletter</connectionUrl>
                                    <skipCheckoutIfExists>true</skipCheckoutIfExists>
                                </configuration>
                            </execution>
                            <execution>
                                <id>checkout-JahiApp-Wiki</id>
                                <phase>pre-clean</phase>
                                <goals>
                                    <goal>checkout</goal>
                                </goals>
                                <configuration>
                                    <checkoutDirectory>forge-wiki</checkoutDirectory>
                                    <connectionUrl>scm:git:git@github.com:Jahia/JahiApp-Wiki</connectionUrl>
                                    <skipCheckoutIfExists>true</skipCheckoutIfExists>
                                </configuration>
                            </execution>
                            <execution>
                                <id>LDAP-provider</id>
                                <phase>pre-clean</phase>
                                <goals>
                                    <goal>checkout</goal>
                                </goals>
                                <configuration>
                                    <checkoutDirectory>forge-ldap</checkoutDirectory>
                                    <connectionUrl>scm:git:git@github.com:Jahia/LDAP-provider</connectionUrl>
                                    <skipCheckoutIfExists>true</skipCheckoutIfExists>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>forge-modules</id>
            <modules>
                <module>forge-blog</module>
                <module>forge-forum</module>
                <module>forge-ldap</module>
                <module>forge-modules-set</module>
                <module>forge-my-connections</module>
                <module>forge-my-portal</module>
                <module>forge-newsletter</module>
                <module>forge-templates-set</module>
                <module>forge-wiki</module>
            </modules>
        </profile>
        
    </profiles>
  
    <build>
        <plugins>
            <plugin>
                <groupId>org.jahia.server</groupId>
                <artifactId>maven-jahia-plugin</artifactId>
                <version>${jahia.plugin.version}</version>
                <executions>
                    <execution>
                        <id>native2ascii</id>
                        <goals>
                            <goal>native2ascii</goal>
                        </goals>
                        <configuration>
                            <encoding>ISO-8859-1</encoding>
                            <src>${basedir}/src/main/webapp/resources</src>
                            <addToProjectResources>false</addToProjectResources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>package-imports</id>
                        <goals>
                            <goal>package-imports</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
