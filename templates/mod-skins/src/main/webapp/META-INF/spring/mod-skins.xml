<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
        <bean name="skinFilter" class="org.jahia.services.render.filter.ModuleFilters">
            <property name="module" value="Jahia Skins"/>
            <property name="filters">
                <list>
                    <bean class="org.jahia.modules.filter.SkinFilter"/>
                </list>
            </property>
        </bean>
        <bean id="skinsInitializer" class="org.jahia.modules.render.SkinsChoiceListInitializerImpl">
            <property name="key" value="skins"/>
        </bean>
</beans>