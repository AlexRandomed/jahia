<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
    <bean id="myPortalProfileExtension" class="org.jahia.utils.profile.ProfileExtension">
        <property name="key" value="portal"/>
        <property name="displayName" value="My Portal"/>
    </bean>
    <bean class="org.jahia.modules.portal.MoveAction">
        <property name="name" value="move"/>
        <property name="contentManager" ref="ContentManagerHelper"/>
    </bean>
    <bean class="org.jahia.modules.portal.DeleteAction">
        <property name="name" value="delete"/>
        <property name="contentManager" ref="ContentManagerHelper"/>
    </bean>
    <bean class="org.jahia.modules.portal.CloneAction">
        <property name="name" value="clone"/>
        <property name="contentManager" ref="ContentManagerHelper"/>
    </bean>
</beans>