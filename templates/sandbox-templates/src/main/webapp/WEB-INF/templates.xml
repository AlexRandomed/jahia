<template-set xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.jahia.net/jahia/templates" xsi:schemaLocation="http://www.jahia.net/jahia/templates http://www.jahia.net/shemas/templates_2_0.xsd">
    <package-name>Sandbox templates</package-name>
    <extends>Community templates</extends>
    <root-folder>sandbox_templates</root-folder>
    <provider>http://www.jahia.org</provider>
    <thumbnail>images/preview.gif</thumbnail>
    <resource-bundle>jahiatemplates.Sandbox_templates</resource-bundle>
    <definitions-file>definitions.cnd</definitions-file>
    <templates default="pressRelease" homepage="Home">
        <template name="myPortal" display-name="My portal" filename="layoutManager.jsp" page-type="sandbox_templates:layoutmanager"/>
        <template name="pressRelease" display-name="Press release" filename="pressRelease.jsp" page-type="sandbox_templates:pressrelease"/>
        <template name="mediaGallery" display-name="Media gallery" filename="mediagallery.jsp" page-type="sandbox_templates:mediagallery"/>
        <template name="testSimple" display-name="test Simple" filename="simple.jsp" page-type="community_templates:simple"/>
        <template name="testDouble" display-name="test Double" filename="double.jsp" page-type="community_templates:double"/>
        <template name="pediaarticle" display-name="Pedia Article" filename="pediaArticle.jsp" page-type="sandbox_templates:pediaarticle"/>
        <template name="pediaglossary" display-name="Pedia Glossary" filename="pediaGlossary.jsp" page-type="sandbox_templates:pediaglossary"/>
        <template name="sitemap" display-name="Sitemap" filename="sitemap.jsp" page-type="sandbox_templates:sitemap"/>
    </templates>
</template-set>

