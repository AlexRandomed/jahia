<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE form-validation
    PUBLIC "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
    "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>
    <formset>
        <form name="test-tesmplates-validationFieldsUsingValidator">
            <field property="mandatorySmallText" depends="required">
                <arg0 key="mandatorySmallText" resource="false"/>
            </field>
            <field property="mandatoryLong" depends="required,long">
                <arg0 key="mandatoryLong" resource="false"/>
            </field>
            <field property="alphanumericSmallText" depends="mask">
                <msg name="mask" key="errors.mask"/>
                <arg0 key="alphanumericSmallText" resource="false"/>
                <arg1 key="^[a-zA-Z1-9]*$" resource="false"/>
                <var>
                    <var-name>mask</var-name>
                    <var-value>^[a-zA-Z1-9]*$</var-value>
                </var>
            </field>
            <field property="longBetween1and10" depends="integer,intRange">
                <arg0 key="longBetween1and10" resource="false"/>
                <arg1 name="intRange" key="${var:min}" resource="false"/>
                <arg2 name="intRange" key="${var:max}" resource="false"/>
                <var>
                    <var-name>min</var-name>
                    <var-value>1</var-value>
                </var>
                <var>
                    <var-name>max</var-name>
                    <var-value>10</var-value>
                </var>
            </field>
            <field property="mandatoryLongBetween1and10" depends="required,integer,intRange">
                <arg0 key="mandatoryLongBetween1and10" resource="false"/>
                <arg1 name="intRange" key="${var:min}" resource="false"/>
                <arg2 name="intRange" key="${var:max}" resource="false"/>
                <var>
                    <var-name>min</var-name>
                    <var-value>1</var-value>
                </var>
                <var>
                    <var-name>max</var-name>
                    <var-value>10</var-value>
                </var>
            </field>
        </form>        
    </formset>
</form-validation>