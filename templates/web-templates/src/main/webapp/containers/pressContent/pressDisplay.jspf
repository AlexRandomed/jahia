<%@ include file="../../common/declarations.jspf" %>


<template:container id="pressReleaseContainer" cacheKey="resume" displayActionMenu="false">
    <li class="pressRealeseItem">
        <ui:actionMenu contentObjectName="pressReleaseContainer"
                       namePostFix="pressRelease"
                       labelKey="pressRelease.update">
            <template:field name='date' display="false" valueBeanID="datePress"/>
            <span class="pressRealeseDate"><fmt:formatDate value="${datePress}" pattern="dd/MM/yyyy"/></span>
            <template:getContentObjectCategories valueID="pressReleaseContainerCatKeys" objectKey="contentContainer_${pageScope.pressReleaseContainer.ID}"/>
        <c:if test="${!empty pressReleaseContainerCatKeys }">
            <span class="pressRealeseCategory">
                <utility:resourceBundle resourceName='category' defaultValue='category'/> : <ui:displayCategoryTitle categoryKeys="${pressReleaseContainerCatKeys}"/>
            </span>
        </c:if>
            <h4><a href="${currentPage.url}/template/pressDetail?queryPath=${pressReleaseContainer.JCRPath}">
                <template:field name='title'/></a></h4>
        </ui:actionMenu>
        <div class="clear"></div>
    </li>
</template:container>

