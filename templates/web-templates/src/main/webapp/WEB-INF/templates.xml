<template-set xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.jahia.net/jahia/templates" xsi:schemaLocation="http://www.jahia.net/jahia/templates http://www.jahia.net/shemas/templates_2_0.xsd">
    <package-name>Web templates</package-name>
    <root-folder>web-templates</root-folder>
    <provider>www.jahia.org</provider>
    <thumbnail>images/preview.gif</thumbnail>
    <resource-bundle>jahiatemplates.Web-templates</resource-bundle>
    <definitions-file>definitions.cnd</definitions-file>
    <definitions-file>definitions.grp</definitions-file>
    <common-pages>
        <search-results>searchresult.jsp</search-results>
    </common-pages>
    <templates default="simple" homepage="Home">
        <template name="Home" display-name="Home page" filename="home.jsp" page-type="web_templates:home"/>
        <template name="simple" display-name="Simple" filename="simple.jsp" page-type="web_templates:simple"/>
        <template name="article" display-name="Article" filename="article.jsp" page-type="web_templates:article"/>
        <template name="events" display-name="Events" filename="events.jsp" page-type="web_templates:events"/>
        <template name="people" display-name="Portraits" filename="people.jsp" page-type="web_templates:people"/>
        <template name="press" display-name="Press releases" filename="pressRelease.jsp" page-type="web_templates:pressRelease"/>
        <template name="news" display-name="News" filename="news.jsp" page-type="web_templates:news"/>
        <template name="job" display-name="Job offers" filename="job.jsp" page-type="web_templates:job"/>
        <template name="full" display-name="Full" filename="full.jsp" page-type="web_templates:full"/>
        <template name="publication" display-name="Publications" filename="publication.jsp" page-type="web_templates:publication"/>
        <template name="layout" display-name="My portal" filename="layoutManager.jsp" page-type="web_templates:layoutManager"/>
    </templates>
</template-set>

