<?xml version="1.0" encoding="UTF-8"?>
<project>
    <parent>
        <groupId>org.jahia.server</groupId>
        <artifactId>patches</artifactId>
        <version>6.5-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>camel-stream</artifactId>
    <name>Camel Stream Jahia patches</name>
    <packaging>jar</packaging>

    <properties>
        <jahia.patch.groupId>org.apache.camel</jahia.patch.groupId>
        <jahia.patch.artifactId>camel-stream</jahia.patch.artifactId>
        <jahia.patch.version>2.4.0</jahia.patch.version>
    </properties>

    <dependencies>
        <dependency>
        	<groupId>${jahia.patch.groupId}</groupId>
        	<artifactId>${jahia.patch.artifactId}</artifactId>
        	<version>${jahia.patch.version}</version>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.16</version>
        </dependency>
    </dependencies>
    
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.1</version>
                <executions>
                    <execution>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>${jahia.patch.groupId}</groupId>
                                    <artifactId>${jahia.patch.artifactId}</artifactId>
                                    <version>${jahia.patch.version}</version>
                                    <type>jar</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>truezip-maven-plugin</artifactId>
                <version>1.0-beta-4</version>
                <executions>
                    <execution>
                        <id>copy</id>
                        <goals>
                          <goal>cp</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <from>${project.build.directory}/${jahia.patch.artifactId}-${jahia.patch.version}.jar</from>
                            <to>${project.build.directory}/${jahia.patch.artifactId}-${jahia.patch.version}-jahia.jar</to>
                        </configuration>
                    </execution>
                    <execution>
                        <id>patch</id>
                        <goals>
                          <goal>copy</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                          <fileset>
                            <directory>${project.build.directory}/classes</directory>
                            <outputDirectory>${project.build.directory}/${jahia.patch.artifactId}-${jahia.patch.version}-jahia.jar</outputDirectory>
                          </fileset>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.sonatype.plugins</groupId>
                <artifactId>attach-artifact-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-artifacts</id>
                        <phase>package</phase>
                        <goals>
                            <goal>attach-artifact</goal>
                        </goals>
                        <configuration>
                            <artifacts>
                                <artifact>
                                    <file>${project.build.directory}/${jahia.patch.artifactId}-${jahia.patch.version}-jahia.jar</file>
                                    <groupId>${jahia.patch.groupId}</groupId>
                                    <artifactId>${jahia.patch.artifactId}</artifactId>
                                    <version>${jahia.patch.version}</version>
                                    <classifier>jahia</classifier>
                                </artifact>
                            </artifacts>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    
</project>
