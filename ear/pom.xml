    <modelVersion>4.0.0</modelVersion>
    <artifactId>jahia-ear</artifactId>
    <name>Jahia EAR</name>
    <packaging>ear</packaging>

    <profiles>
        <profile>
            <id>code-coverage</id>
            <activation>
                <property>
                    <name>jahia.deploy.targetServerType</name>
                    <value>tomcat</value>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>com.cenqua.clover</groupId>
                    <artifactId>clover</artifactId>
                    <version>2.4.2</version>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>jboss-deployment</id>
            <activation>
                <property>
                    <name>jahia.deploy.targetServerType</name>
                    <value>jboss</value>
                </property>
            </activation>
            <properties>
                <jahia.deploy.skip>true</jahia.deploy.skip>
            </properties>
        </profile>
    </profiles>

    <dependencies>
        <dependency>
            <groupId>org.jahia.server</groupId>
            <artifactId>jahia-war</artifactId>
            <version>${jahia.package.version}</version>
            <type>war</type>
        </dependency>
        <!-- We will to deploy the RAR inside the EAR for JEE app servers.
        <dependency>
            <groupId>org.jahia.server</groupId>
            <artifactId>jackrabbit-rar</artifactId>
            <version>${jahia.package.version}</version>
            <type>rar</type>
        </dependency>
        -->

