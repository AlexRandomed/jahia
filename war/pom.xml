        <profile>
            <id>full-gwt</id>
            <activation>
                <property>
                    <name>!singleModule</name>
                </property>
            </activation>
            <build>
                <plugins>
                  <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>gwt-maven-plugin</artifactId>                       
                        <version>1.2-SNAPSHOT</version>
                        <configuration>
                            <localWorkers>5</localWorkers>
                            <noServer>true</noServer>
                            <extraJvmArgs>-Xmx1280m -Xss2048k -Dgwt.jjs.permutationWorkerFactory=com.google.gwt.dev.ThreadedPermutationWorkerFactory</extraJvmArgs>
                            <webappDirectory>${project.build.directory}/jahia/gwt</webappDirectory>
                            <skip>${jahia.gwt.skip}</skip>
                            <modules>
                                <module>org.jahia.ajax.gwt.module.acleditor.ACLEditor</module>
                                <module>org.jahia.ajax.gwt.module.admin.Admin</module>
                                <module>org.jahia.ajax.gwt.module.contentmanager.ContentManager</module>
