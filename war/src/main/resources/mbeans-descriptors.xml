  </mbean>

  <mbean         name="CategoryService"
          description="Category management service"
                 type="org.jahia.services.categories.CategoryService">
  </mbean>

  <mbean         name="HtmlParserService"
          description="HTML parsing service"
                 type="org.jahia.services.htmlparser.HtmlParserService">
