<!-- Descriptions of JMX MBeans for Jahia -->

<mbeans-descriptors>

  <mbean         name="CacheFactory"
          description="Cache factory"
                 type="org.jahia.services.cache.CacheFactory">

    <attribute   name="serviceName"
          description="The name of the service"
                 type="java.lang.String"/>
    <!--
    <constructor name="CacheFactory"/>
    -->

    <operation   name="flushAllCaches"
          description="Flushes all the caches in the factory"
               impact="ACTION"
           returnType="void">
    </operation>

    <!--
    <operation   name="findServices"
          description="Return all child Services"
               impact="INFO"
           returnType="[Lorg.apache.commons.modeler.demo.Service;"/>

    <operation   name="removeService"
          description="Remove an existing child Service"
               impact="ACTION"
           returnType="void">
      <parameter name="service"
          description="The service to be removed"
                 type="org.apache.commons.modeler.demo.Service"/>
    </operation>
    -->

  </mbean>

  <mbean         name="Cache"
          description="Cache"
                 type="org.jahia.services.cache.Cache">

    <attribute   name="name"
          description="Cache name"
            writeable="false"
                 type="java.lang.String"/>

    <attribute   name="description"
          description="Description"
            writeable="false"
                 type="java.lang.String"/>

    <attribute   name="cacheLimit"
          description="Cache size limit"
                 type="int"/>

    <attribute   name="size"
            getMethod="size"
          description="Current cache size"
            writeable="false"
                 type="int"/>

    <!--
    <constructor name="CacheFactory"/>
    -->

    <operation   name="flush"
          description="Flushes this cache"
               impact="ACTION"
           returnType="void">
    </operation>

    <!--
    <operation   name="findServices"
          description="Return all child Services"
               impact="INFO"
           returnType="[Lorg.apache.commons.modeler.demo.Service;"/>

    <operation   name="removeService"
          description="Remove an existing child Service"
               impact="ACTION"
           returnType="void">
      <parameter name="service"
          description="The service to be removed"
                 type="org.apache.commons.modeler.demo.Service"/>
    </operation>
    -->

  </mbean>


  <mbean         name="JahiaService"
          description="Generic Jahia Service"
                 type="org.jahia.services.JahiaService">
    <attribute   name="serviceName"
          description="The name of the service"
                 type="java.lang.String"/>
  </mbean>

