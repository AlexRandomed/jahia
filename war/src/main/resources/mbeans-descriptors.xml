  </mbean>

  <mbean         name="LockService"
          description="Service that handles the locks on content object"
                 type="org.jahia.services.locks.LockService">
    <attribute   name="serviceName"
          description="The name of the service"
                 type="java.lang.String"/>
  </mbean>

  <mbean         name="JahiaUserManagerService"
          description="User manager service"
                 type="org.jahia.services.usermanager.JahiaUserManagerService">
    <operation   name="lookupUser"
          description="Lookup a user by his unique key"
               impact="ACTION-INFO"
           returnType="org.jahia.services.usermanager.JahiaUser">
      <parameter name="userKey"
          description="User key (format : userlogin + ':' + siteID)"
                 type="java.lang.String" />
    </operation>
  </mbean>

  <mbean         name="JahiaUser"
          description="User"
                 type="org.jahia.services.usermanager.JahiaUser">
    <attribute   name="name"
          description="User name"
                 type="java.lang.String"/>
    <attribute   name="properties"
          description="The user's properties"
                 type="java.util.Properties"/>
  </mbean>


  <mbean         name="SettingsBean"
          description="Jahia Configuration Settings"
                 type="org.jahia.settings.SettingsBean">
    <attribute   name="mimeTypes"
          description="Registered mime types"
                 type="java.util.Properties"/>
    <attribute   name="utf8Encoding"
          description="Use UTF-8 encoding"
                 type="boolean"
                   is="true" />
    <attribute   name="outputCacheActivated"
          description="Use output cache"
                 type="boolean"
                   is="true" />
    <attribute   name="outputCacheDefaultExpirationDelay"
          description="Output cache default expiration delay in milliseconds"
                 type="long" />
    <attribute   name="siteIDInURL"
          description="Force the presence of the site id in the generated URLs"
                 type="boolean"
                   is="true" />
    <attribute   name="appDebugModeOn"
          description="Use the application debugging mode"
                 type="boolean"
                   is="true" />
    <attribute   name="appInheritingJahiaSessionAttributes"
          description="Do the applications have access to Jahia's session attributes ?"
                 type="boolean"
                   is="true" />
    <attribute   name="jahiaWebAppsDeployerBaseURL"
          description="Web applications deployer base URL"
                 type="java.lang.String" />
    <attribute   name="defaultLanguageCode"
          description="Default language code"
                 type="java.lang.String" />
    <attribute   name="aclPreloadCount"
          description="Number of ACLs to preload on Jahia startup (-1 means they will all be loaded)"
                 type="int" />
    <attribute   name="jmsCacheActivated"
          description="Use the JMS cache synchronization mechanism"
                 type="boolean"
                   is="true" />
    <attribute   name="jmsCacheInitialContextFactory"
          description="JMS cache initial context factory class"
                 type="java.lang.String" />
    <attribute   name="jmsCacheInitialContextFactory"
          description="JMS cache context URL"
                 type="java.lang.String" />
    <attribute   name="jmsCacheTopicConnectionFactoryName"
          description="JMS cache TopicConnection factory name"
                 type="java.lang.String" />
    <attribute   name="jmsCacheTopicName"
          description="JMS cache topic name"
                 type="java.lang.String" />
    <attribute   name="buildNumber"
          description="Jahia Build number"
                 type="int" />
    <attribute   name="server"
          description="Web container name"
                 type="java.lang.String" />
    <attribute   name="serverHomeDiskPath"
          description="Web container home disk path"
                 type="java.lang.String" />
    <attribute   name="jahiaWebAppsDiskPath"
