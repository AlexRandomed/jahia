  </mbean>

  <mbean         name="JahiaFileWatcherService"
          description="File watcher daemon service"
                 type="org.jahia.services.deamons.filewatcher.JahiaFileWatcherService">
  </mbean>

  <mbean         name="JahiaEventService"
          description="Event generation service"
                 type="org.jahia.services.events.JahiaEventGeneratorService">
  </mbean>

  <mbean         name="JahiaAuditLogManagerService"
          description="Event log management service"
