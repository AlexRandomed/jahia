  </mbean>

  <mbean         name="JahiaSearchService"
          description="Search engine service"
                 type="org.jahia.services.search.JahiaSearchService">
  </mbean>

  <mbean         name="JahiaGroupManagerService"
          description="Group manager service"
                 type="org.jahia.services.usermanager.JahiaGroupManagerService">
  </mbean>

  <mbean         name="JahiaACLManagerService"
          description="ACL manager service"
