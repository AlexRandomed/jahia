  </mbean>

  <mbean         name="JahiaFieldService"
          description="Field service"
                 type="org.jahia.services.fields.JahiaFieldService">
  </mbean>

  <mbean         name="JahiaApplicationsDispatchingService"
          description="Web application dispatching service"
