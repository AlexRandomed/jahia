  <mbean         name="JahiaHomepagesService"
          description="Home (entry) page management service"
                 type="org.jahia.services.homepages.JahiaHomepagesService">
  </mbean>

  <mbean         name="JahiaVersionService"
          description="Workflow, language and staging resolving service"
                 type="org.jahia.services.version.JahiaVersionService">
  </mbean>

  <mbean         name="JahiaCacheService"
          description="Generic caching (cluster-aware) service"
