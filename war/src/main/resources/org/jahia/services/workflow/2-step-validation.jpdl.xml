<?xml version="1.0" encoding="UTF-8"?>

<process name="My First Process" xmlns="http://jbpm.org/4.3/jpdl">
   <start name="start">
      <transition name="start Validation" to="First Review"/>
   </start>
   <state name="First Review">
      <transition  name="to Final Review" to="Final Review"/>
   </state>
   <state name="Final Review">
      <transition name="to Publication" to="Publication"/>
   </state>
   <state name="Publication">
      <transition name="to end" to="end"/>
   </state>
   <end name="end"/>
</process>