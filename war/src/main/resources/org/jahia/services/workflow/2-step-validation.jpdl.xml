<?xml version="1.0" encoding="UTF-8"?>

<process name="My First Process" xmlns="http://jbpm.org/4.3/jpdl">
   <start name="start">
      <transition to="First Review"/>
   </start>
   <task name="First Review">
      <transition to="Final Review"/>
   </task>
   <task name="Final Review">
      <transition to="Publication"/>
   </task>
   <state name="Publication">
      <transition to="end"/>
   </state>
   <end name="end"/>
</process>