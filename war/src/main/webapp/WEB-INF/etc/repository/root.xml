<content jcr:primaryType="jnt:systemfolder"

           xmlns:jcr="http://www.jcp.org/jcr/1.0"
           xmlns:j="http://www.jahia.org/jahia/1.0"
           xmlns:jnt="http://www.jahia.org/jahia/nt/1.0">

    <shared jcr:primaryType="jnt:folder" j:applyAcl="g:users:rw" >
        <files jcr:primaryType="jnt:folder"/>
        <mashups jcr:primaryType="jnt:folder"/>
    </shared>

    <users jcr:primaryType="jnt:systemfolder" jcr:mixinTypes="jmix:usersFolder" j:usersFolderSkeleton="user.xml"/>

    <sites jcr:primaryType="jnt:systemfolder" jcr:mixinTypes="jmix:virtualsitesFolder" j:virtualsitesFolderSkeleton="site.xml"/>

    <imports jcr:primaryType="jnt:importDropBox" j:hidden="true"/>

    <layoutmanager jcr:primaryType="jnt:layoutManager" j:hidden="true" j:applyAcl="g:users:rw" />

    <mounts jcr:primaryType="jnt:folder" j:applyAcl="g:users:rw" />
</content>