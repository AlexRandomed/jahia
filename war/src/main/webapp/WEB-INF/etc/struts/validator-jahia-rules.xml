<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE form-validation PUBLIC
	"-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
	"http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">
<form-validation>
    <global>
        <!-- validator to check whether all mandatory languages are set -->
        <validator name="requiredMandatoryLang" 
              classname="org.jahia.engines.validation.JahiaFieldChecks" 
        	     method="validateMandatoryMLText" 
           methodParams="java.lang.Object,
                         org.apache.commons.validator.ValidatorAction,
                         org.apache.commons.validator.Field,
                         org.apache.struts.action.ActionMessages,
                         javax.servlet.http.HttpServletRequest" 
                     msg="errors.mandlang"/>

        <!-- validator to check whether mandatory languages are set, 
             if the text was set in at least one language -->                     
        <validator name="requiredMandatoryLangIfSet" 
              classname="org.jahia.engines.validation.JahiaFieldChecks" 
        	     method="validateMandatoryMLTextIfSet" 
           methodParams="java.lang.Object,
                         org.apache.commons.validator.ValidatorAction,
                         org.apache.commons.validator.Field,
                         org.apache.struts.action.ActionMessages,
                         javax.servlet.http.HttpServletRequest" 
                     msg="errors.mandlang"/>                     

        <!-- validator to check whether page or link title has been set, 
             only if selected option is not "No link" or "Reset link" -->       
        <validator name="requiredIfLinkValid" 
              classname="org.jahia.engines.validation.JahiaFieldChecks" 
        	     method="validateMandatoryTitleIfLinkValid" 
           methodParams="java.lang.Object,
                         org.apache.commons.validator.ValidatorAction,
                         org.apache.commons.validator.Field,
                         org.apache.struts.action.ActionMessages,
                         javax.servlet.http.HttpServletRequest" 
                     msg="errors.required"/>                       
                       
        <!-- validator to check that the input for each language does not exceed a specified maximum length -->
        <validator name="maxlengthAllLang" 
              classname="org.jahia.engines.validation.JahiaFieldChecks" 
    			 method="validateMaxLengthMLText" 
           methodParams="java.lang.Object,
                        org.apache.commons.validator.ValidatorAction,
                        org.apache.commons.validator.Field,
                        org.apache.struts.action.ActionMessages,
                        javax.servlet.http.HttpServletRequest" 
	            depends=""
                    msg="errors.maxlength"/>

        <!-- validator to check that the input for each language isn't less than a specified minimum length -->
        <validator name="minlengthAllLang" 
              classname="org.jahia.engines.validation.JahiaFieldChecks" 
      			 method="validateMinLengthMLText" 
           methodParams="java.lang.Object,
                        org.apache.commons.validator.ValidatorAction,
                        org.apache.commons.validator.Field,
                        org.apache.struts.action.ActionMessages,
                        javax.servlet.http.HttpServletRequest" 
                depends=""
                    msg="errors.minlength"/>
    </global>
</form-validation>
