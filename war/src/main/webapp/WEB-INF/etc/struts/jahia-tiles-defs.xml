  <definition name="engines.apply-any-popup" extends="engines.default.layout">
      <put name="body-content" value="/views/engines/common/apply_any_popup.jsp" />
   </definition>

  <!-- Hello world engine -->
  <definition name="engines.helloworld.input" extends="engines.default.layout">
      <put name="body-content" value="/views/engines/helloworld/input_body.jsp" />
   </definition>
  <definition name="engines.helloworld.welcome" extends="engines.default.layout">
      <put name="body-content" value="/views/engines/helloworld/welcome_body.jsp" />
   </definition>

