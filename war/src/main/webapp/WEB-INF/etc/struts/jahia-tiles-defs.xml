  <definition name="engines.versioning.containerlist.containerversiondetail" extends="engines.versioning.containerlist">
      <put name="engine-title" value="/views/engines/versioning/container/engine-title.jsp" />
      <put name="menu-bar" value="/views/engines/versioning/container/empty_menuBar.jsp" />
      <put name="body-content" value="/views/engines/versioning/container/compare_version.jsp" />
   </definition>

