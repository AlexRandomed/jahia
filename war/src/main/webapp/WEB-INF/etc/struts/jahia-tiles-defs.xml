  <!-- versioning engine -->
  <definition name="engines.versioning" extends="engines.default.layout">
      <!--
      <put name="top-action-menu" value="/views/engines/common/actions_selector.jsp" />
      <put name="tab-buttons" value="/views/engines/common/tab_buttons.jsp" />
      -->
      <put name="multilanguage-links" value="/views/engines/common/multilanguage_links.jsp" />
      <put name="buttons" value="/jsp/jahia/engines/buttons.jsp" />
      <put name="menu-bar" value="/jsp/jahia/engines/menuBar.jsp" />
   </definition>

  <!-- versioning engine : for pages -->
  <definition name="engines.versioning.pages" extends="engines.versioning">
      <put name="engine-title" value="/views/engines/pageproperties/common/engine-title.jsp" />
      <put name="top-information" value="/views/engines/pageproperties/common/top-information.jsp" />
   </definition>

  <!-- versioning engine : for pages : revisions list view -->
  <definition name="engines.versioning.pages.revisions-list" extends="engines.versioning.pages">
      <put name="buttons" value="/views/engines/pageproperties/common/buttons_revisions-list.jsp" />
      <put name="body-content" value="/views/engines/versioning/pages/revisions-list.jsp" />
   </definition>

  <!-- versioning engine : for pages : site map view -->
  <definition name="engines.versioning.pages.sitemap" extends="engines.versioning.pages">
    <put name="buttons" value="/views/engines/pageproperties/common/buttons_sitemap.jsp" />
    <put name="body-content" value="/views/engines/versioning/pages/sitemap.jsp" />
   </definition>

  <!-- versioning engine : for pages : confirm restore view -->
  <definition name="engines.versioning.pages.confirm-restore" extends="engines.versioning.pages">
      <put name="buttons" value="/views/engines/pageproperties/common/buttons_confirm_restore.jsp" />
      <put name="confirmRestoreNav" value="confirm_restore_page_nav" type="string" direct="false" />
      <put name="body-content" value="/views/engines/versioning/confirm_restore.jsp" />
   </definition>

  <!-- versioning engine : for pages : confirm undo staging view -->
  <definition name="engines.versioning.pages.confirm-undo-staging" extends="engines.versioning.pages">
     <put name="buttons" value="/views/engines/pageproperties/common/buttons_confirm_restore.jsp" />
     <put name="body-content" value="/views/engines/versioning/pages/confirm_undo_staging.jsp" />
   </definition>

  <!-- versioning engine : for pages : confirm page undelete view -->
  <definition name="engines.versioning.pages.confirm-page-undelete" extends="engines.versioning.pages">
    <put name="body-content" value="/views/engines/versioning/pages/confirm_page_undelete.jsp" />
    <put name="buttons" value="/views/engines/pageproperties/common/buttons_confirm_restore.jsp" />
  </definition>

  <!-- versioning engine : for pages : operation choices view -->
  <definition name="engines.versioning.pages.operation-choices" extends="engines.versioning.pages">
      <put name="versioningUndeletePage" value="true" type="string" />
      <put name="step2" value="showSiteMap" type="string" />
      <put name="buttons" value="/views/engines/pageproperties/common/buttons_operation_choices.jsp" />
      <put name="body-content" value="/views/engines/versioning/operation_choices.jsp" />
   </definition>

  <!-- versioning engine : for pages : page sub tree locked view -->
  <definition name="engines.versioning.pages.tree-locked" extends="engines.versioning.pages">
      <put name="body-content" value="/views/engines/versioning/pages/tree-locked.jsp" />
   </definition>



  <!-- versioning engine : for container -->
  <definition name="engines.versioning.container" extends="engines.versioning">
      <put name="navigation" type="string" value="true"/>
      <put name="engine-title" value="/views/engines/containeredit/engine-title.jsp" />
      <put name="top-information" value="/views/engines/containeredit/top-information.jsp" />
   </definition>

  <!-- versioning engine : for container : revisions list view -->
  <definition name="engines.versioning.container.revisions-list" extends="engines.versioning.container">
      <put name="body-content" value="/views/engines/versioning/container/revisions-list.jsp" />
   </definition>

  <!-- versioning engine : for container : confirm restore view -->
  <definition name="engines.versioning.container.confirm-restore" extends="engines.versioning.container">
      <put name="confirmRestoreNav" value="confirm_restore_container_nav" type="string" direct="false" />
      <put name="buttons" value="/views/engines/pageproperties/common/buttons_confirm_restore.jsp" />
      <put name="body-content" value="/views/engines/versioning/confirm_restore.jsp" />
   </definition>

  <!-- versioning engine : for container : confirm undo staging view -->
  <definition name="engines.versioning.container.confirm-undo-staging" extends="engines.versioning.container">
    <put name="confirmRestoreNav" value="confirm_restore_container_nav" type="string" direct="false" />
    <put name="buttons" value="/views/engines/pageproperties/common/buttons_confirm_restore.jsp" />
    <put name="body-content" value="/views/engines/versioning/container/confirm_undo_staging.jsp" />
  </definition>

  <!-- versioning engine : for container : operation choices view -->
  <definition name="engines.versioning.container.operation-choices" extends="engines.versioning.container">
      <put name="step2" value="showRevisionsList" type="string" />
      <put name="body-content" value="/views/engines/versioning/operation_choices.jsp" />
   </definition>

