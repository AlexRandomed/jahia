<tiles-definitions>
  <!--=======================================================================-->
  <!-- ADMININSTRATION SECTION                          -->
  <!--=======================================================================-->


  <definition name="default.layout" path="/views/administration/admin_default_layout.jsp">
      <put name="header" value="/views/administration/common/servermode_admin_header.jsp"/>
      <put name="footer" value="/views/administration/common/servermode_admin_footer.jsp"/>
      <put name="dialogTitle" type="string" value="label.serverSettings"/>
   </definition>

  <!-- HTML settings -->
  <definition name="admin.htmlsettings.main" extends="default.layout">
      <put name="body-content" value="/views/administration/htmlsettings/main.jsp"/>
      <put name="dialogTitle" type="string" value="org.jahia.admin.htmlsettings.label"/>
   </definition>

  <!-- Integrity checks -->
  <definition name="admin.integrity.main" extends="default.layout">
      <put name="body-content" value="/views/administration/integrity/main.jsp"/>
      <put name="dialogTitle" type="string" value="label.integrityCheck"/>
   </definition>

</tiles-definitions>