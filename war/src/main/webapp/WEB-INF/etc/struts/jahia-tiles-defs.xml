   </definition>

  <!-- Default errors -->
  <definition name="engines.errors" extends="engines.default.layout">
      <put name="body-content" value="/views/engines/common/error.jsp" />
   </definition>

  <!-- Default Engine Close MyEngineWin  Popup -->
  <definition name="engines.close" extends="engines.default.layout">
      <put name="body-content" value="/views/engines/common/close.jsp" />
   </definition>

  <!-- Default Engine Close Any Popup -->
  <definition name="engines.close-any-popup" extends="engines.default.layout">
      <put name="body-content" value="/views/engines/common/close_any_popup.jsp" />
   </definition>

