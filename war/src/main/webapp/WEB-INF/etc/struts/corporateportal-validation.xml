<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE form-validation
    PUBLIC "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
    "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>
    <formset>
        <form name="boxValidationBean">
            <field property="boxTitle" depends="required">
                <arg0 key="label.title"/>
            </field>
        </form>
        <form name="navigationValidationBean">
            <field property="navigationLink" depends="required">
                <arg0 key="label.title"/>
            </field>
        </form>        
        <form name="projectValidationBean">
            <field property="directoryProjectName" depends="required">
                <arg0 key="label.name"/>
            </field>
        </form>
        <form name="peopleValidationBean">
            <field property="directoryPeopleFirstName" depends="required">
                <arg0 key="label.firstName"/>
            </field>
            <field property="directoryPeopleLastName" depends="required">
                <arg0 key="label.lastName"/>
            </field>
        </form>
        <form name="topMenuValidationBean">
            <field property="topLink" depends="required">
                <arg0 key="label.title"/>
            </field>
        </form>
        <form name="leftMenuValidationBean">
            <field property="link" depends="required">
                <arg0 key="label.title"/>
            </field>
        </form>
        <form name="blogValidationBean">
            <field property="blogTitle" depends="required">
                <arg0 key="label.title"/>	
            </field>
            <field property="blogDate" depends="required">
                <arg0 key="label.date"/>	
            </field>
        </form>           
    </formset>
</form-validation>