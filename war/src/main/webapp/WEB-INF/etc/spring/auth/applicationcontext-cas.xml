<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="CasService" parent="proxyTemplate">
        <property name="target">
            <bean id="jahiaCasService" class="org.jahia.services.sso.CasService" parent="jahiaServiceTemplate" factory-method="getInstance">
				<!-- the redirect URL to the CAS server for login -->
				<property name="loginUrl" value="${cas.loginUrl}"/>
				<!-- the URL on which we validate the ticket -->
				<property name="validateUrl" value="${cas.validateUrl}"/>
            </bean>
        </property>
    </bean>

</beans>
