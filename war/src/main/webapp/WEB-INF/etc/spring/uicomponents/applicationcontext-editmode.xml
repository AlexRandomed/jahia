<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <!-- studiomode -->
    <bean id="studiomode" class="org.jahia.services.uicomponents.bean.editmode.EditConfiguration">
        <property name="topToolbar" ref="studiomode-topbar"/>
        <property name="contextMenu" ref="studiomode-contextmenu"/>

        <!-- edit engine -->
        <property name="editEngines">
            <list>
                <ref bean="studio.engine.edit.editcontent"/>
            </list>
        </property>

        <!-- create engine-->
        <property name="createEngines">
            <list>
                <ref bean="studio.engine.edit.createpage"/>
                <ref bean="studio.engine.edit.createcontent"/>
            </list>
        </property>

        <!-- tabs-->
        <property name="tabs">
            <list>
                <ref bean="sidePanelTab.templates"/>
                <ref bean="sidePanelTab.createContent"/>
                <ref bean="sidePanelTab.content"/>
                <ref bean="sidePanelTab.images"/>
                <ref bean="sidePanelTab.files"/>
                <ref bean="sidePanelTab.mashups"/>
                <ref bean="sidePanelTab.search"/>
                <ref bean="sidePanelTab.workflow"/>
            </list>
        </property>

    </bean>

    <bean id="editmode" class="org.jahia.services.uicomponents.bean.editmode.EditConfiguration">
        <property name="topToolbar" ref="editmode-topbar"/>
        <property name="contextMenu" ref="editmode-contextmenu"/>

        <!-- edit engine -->
        <property name="editEngines">
            <list>
                <ref bean="engine.edit.editcontent"/>
            </list>
        </property>

        <!-- create engine-->
        <property name="createEngines">
            <list>
                <ref bean="engine.edit.createpage"/>
                <ref bean="engine.edit.createcontent"/>               
            </list>
        </property>

        <!-- tabs -->
        <property name="tabs">
            <list>
                <ref bean="sidePanelTab.pages"/>
                <ref bean="sidePanelTab.createContent"/>
                <ref bean="sidePanelTab.content"/>
                <ref bean="sidePanelTab.images"/>
                <ref bean="sidePanelTab.files"/>
                <ref bean="sidePanelTab.mashups"/>
                <ref bean="sidePanelTab.search"/>
                <ref bean="sidePanelTab.workflow"/>
            </list>
        </property>

    </bean>


    <!-- edit/create engine-->
    <bean id="studio.engine.edit.editcontent" class="org.jahia.services.uicomponents.bean.editmode.Engine">
        <property name="nodeType" value="nt:base"/>
        <property name="tabs">
            <list>
                <ref bean="editenginestab.content"/>
                <ref bean="editenginestab.template"/>
                <ref bean="editenginestab.layout"/>
                <ref bean="editenginestab.options"/>
                <ref bean="editenginestab.rights"/>
                <ref bean="editenginestab.usages"/>
            </list>
        </property>
    </bean>

    <bean id="engine.edit.editcontent" class="org.jahia.services.uicomponents.bean.editmode.Engine">
        <property name="nodeType" value="nt:base"/>
        <property name="tabs">
            <list>
                <ref bean="editenginestab.content"/>
                <ref bean="editenginestab.layout"/>
                <ref bean="editenginestab.metadata"/>
                <ref bean="editenginestab.classification"/>
                <ref bean="editenginestab.options"/>
                <ref bean="editenginestab.rights"/>
                <ref bean="editenginestab.usages"/>
                <ref bean="editenginestab.publication"/>
                <ref bean="editenginestab.seo"/>
                <ref bean="editenginestab.analytics"/>
            </list>
        </property>
    </bean>

    <bean id="studio.engine.edit.createpage" class="org.jahia.services.uicomponents.bean.editmode.Engine">
        <property name="nodeType" value="jnt:page"/>
        <property name="tabs">
            <list>
                <ref bean="editenginestab.createpage"/>
                <ref bean="editenginestab.template"/>
                <ref bean="editenginestab.options"/>
                <ref bean="editenginestab.rights"/>
            </list>
        </property>
    </bean>

    <bean id="engine.edit.createpage" class="org.jahia.services.uicomponents.bean.editmode.Engine">
        <property name="nodeType" value="jnt:page"/>
        <property name="tabs">
            <list>
                <ref bean="editenginestab.createpage"/>
                <ref bean="editenginestab.metadata"/>
                <ref bean="editenginestab.classification"/>
                <ref bean="editenginestab.options"/>
                <ref bean="editenginestab.rights"/>
            </list>
        </property>
    </bean>

    <bean id="studio.engine.edit.createcontent" class="org.jahia.services.uicomponents.bean.editmode.Engine">
        <property name="nodeType" value="nt:base"/>
        <property name="tabs">
            <list>
                <ref bean="editenginestab.content"/>
                <ref bean="editenginestab.template"/>
                <ref bean="editenginestab.layout"/>
                <ref bean="editenginestab.options"/>
            </list>
        </property>
    </bean>

    <bean id="engine.edit.createcontent" class="org.jahia.services.uicomponents.bean.editmode.Engine">
        <property name="nodeType" value="nt:base"/>
        <property name="tabs">
            <list>
                <ref bean="editenginestab.content"/>
                <ref bean="editenginestab.layout"/>
                <ref bean="editenginestab.metadata"/>
                <ref bean="editenginestab.classification"/>
                <ref bean="editenginestab.options"/>
                <ref bean="editenginestab.rights"/>
            </list>
        </property>
    </bean>

    <!-- side tabs-->
    <bean id="sidePanelTab.templates" class="org.jahia.services.uicomponents.bean.editmode.SidePanelTab">
        <property name="key" value="templates"/>
        <property name="treeContextMenu">
            <bean id="org.jahia.toolbar.sidePanel.templates" class="org.jahia.services.uicomponents.bean.toolbar.Toolbar">
                <property name="items">
                    <list>
                        <ref bean="org.jahia.toolbar.item.createTemplate"/>
                        <bean class="org.jahia.services.uicomponents.bean.toolbar.Item">
                            <property name="actionItem">
                                <bean class="org.jahia.ajax.gwt.client.widget.toolbar.action.DeployTemplatesActionItem"/>
                            </property>
                            <property name="titleKey" value="label.templatesDeploy"/>
                        </bean>
                        <ref bean="org.jahia.toolbar.item.createPage"/>
                        <bean class="org.jahia.services.uicomponents.bean.toolbar.Item" parent="org.jahia.toolbar.item.edit">
                            <property name="titleKey" value="label.rename"/>
                            <property name="minIconStyle" value="gwt-toolbar-icon-rename"/>
                            <property name="mediumIconStyle" value="gwt-toolbar-icon-rename"/>
                        </bean>
                        <ref bean="org.jahia.toolbar.item.edit"/>
                        <ref bean="org.jahia.toolbar.item.delete"/>
                        <ref bean="org.jahia.toolbar.item.Separator"/>
                        <ref bean="org.jahia.toolbar.item.copy"/>
                        <ref bean="org.jahia.toolbar.item.cut"/>
                        <ref bean="org.jahia.toolbar.item.paste"/>
                        <ref bean="org.jahia.toolbar.item.pasteReference"/>
                    </list>
                </property>
                <property name="contextMenu" value="true"/>
            </bean>
        </property>
    </bean>

    <bean id="sidePanelTab.pages" class="org.jahia.services.uicomponents.bean.editmode.SidePanelTab">
        <property name="key" value="pages"/>
        <property name="treeContextMenu">
            <bean class="org.jahia.services.uicomponents.bean.toolbar.Toolbar">
                <property name="items">
                    <list>
                        <ref bean="org.jahia.toolbar.item.createPage"/>
                        <bean class="org.jahia.services.uicomponents.bean.toolbar.Item" parent="org.jahia.toolbar.item.edit">
                            <property name="titleKey" value="label.rename"/>
                            <property name="minIconStyle" value="gwt-toolbar-icon-rename"/>
                            <property name="mediumIconStyle" value="gwt-toolbar-icon-rename"/>
                        </bean>
                        <ref bean="org.jahia.toolbar.item.edit"/>
                        <ref bean="org.jahia.toolbar.item.delete"/>
                        <ref bean="org.jahia.toolbar.item.Separator"/>
                        <ref bean="org.jahia.toolbar.item.copy"/>
                        <ref bean="org.jahia.toolbar.item.cut"/>
                        <ref bean="org.jahia.toolbar.item.paste"/>
                        <ref bean="org.jahia.toolbar.item.pasteReference"/>
                    </list>
                </property>
                <property name="contextMenu" value="true"/>
            </bean>
        </property>
    </bean>

    <bean id="sidePanelTab.createContent" class="org.jahia.services.uicomponents.bean.editmode.SidePanelTab">
        <property name="key" value="createContent"/>
    </bean>

    <bean id="sidePanelTab.content" class="org.jahia.services.uicomponents.bean.editmode.SidePanelTab">
        <property name="key" value="content"/>
        <property name="treeContextMenu">
            <bean class="org.jahia.services.uicomponents.bean.toolbar.Toolbar">
                <property name="items">
                    <list>
                        <ref bean="org.jahia.toolbar.item.createFolder"/>
                        <ref bean="org.jahia.toolbar.item.createContent"/>
                        <ref bean="org.jahia.toolbar.item.Separator"/>
                        <ref bean="org.jahia.toolbar.item.rename"/>
                        <ref bean="org.jahia.toolbar.item.delete"/>
                        <ref bean="org.jahia.toolbar.item.Separator"/>
                        <ref bean="org.jahia.toolbar.item.copy"/>
                        <ref bean="org.jahia.toolbar.item.cut"/>
                        <ref bean="org.jahia.toolbar.item.paste"/>
                        <ref bean="org.jahia.toolbar.item.pasteReference"/>
                    </list>
                </property>
                <property name="contextMenu" value="true"/>
            </bean>
        </property>
        <property name="tableContextMenu">
            <bean class="org.jahia.services.uicomponents.bean.toolbar.Toolbar">
                <property name="items">
                    <list>
                        <ref bean="org.jahia.toolbar.item.edit"/>
                        <ref bean="org.jahia.toolbar.item.delete"/>
                        <ref bean="org.jahia.toolbar.item.Separator"/>
                        <ref bean="org.jahia.toolbar.item.copy"/>
                        <ref bean="org.jahia.toolbar.item.cut"/>
                        <ref bean="org.jahia.toolbar.item.paste"/>
                        <ref bean="org.jahia.toolbar.item.pasteReference"/>
                    </list>
                </property>
                <property name="contextMenu" value="true"/>
            </bean>
        </property>
    </bean>

    <bean id="sidePanelTab.images" class="org.jahia.services.uicomponents.bean.editmode.SidePanelTab">
        <property name="key" value="images"/>
        <property name="treeContextMenu">
            <bean class="org.jahia.services.uicomponents.bean.toolbar.Toolbar">
                <property name="items">
                    <list>
                        <ref bean="org.jahia.toolbar.item.createFolder"/>
                        <ref bean="org.jahia.toolbar.item.upload"/>
                        <ref bean="org.jahia.toolbar.item.Separator"/>
                        <ref bean="org.jahia.toolbar.item.rename"/>
                        <ref bean="org.jahia.toolbar.item.delete"/>
                    </list>
                </property>
                <property name="contextMenu" value="true"/>
            </bean>
        </property>
        <property name="tableContextMenu">
            <bean class="org.jahia.services.uicomponents.bean.toolbar.Toolbar">
                <property name="items">
                    <list>
                        <ref bean="org.jahia.toolbar.item.download"/>
                        <ref bean="org.jahia.toolbar.item.preview"/>
                        <ref bean="org.jahia.toolbar.item.Separator"/>
                        <ref bean="org.jahia.toolbar.item.rename"/>
                        <ref bean="org.jahia.toolbar.item.delete"/>
                        <ref bean="org.jahia.toolbar.item.Separator"/>
                        <ref bean="org.jahia.toolbar.item.copy"/>
                        <ref bean="org.jahia.toolbar.item.cut"/>
                        <ref bean="org.jahia.toolbar.item.paste"/>
                        <ref bean="org.jahia.toolbar.item.pasteReference"/>
                        <ref bean="org.jahia.toolbar.item.Separator"/>
                        <ref bean="org.jahia.toolbar.itemsgroup.ContentManager.menu.image"/>
                    </list>
                </property>
                <property name="contextMenu" value="true"/>
            </bean>
        </property>
    </bean>

    <bean id="sidePanelTab.files" class="org.jahia.services.uicomponents.bean.editmode.SidePanelTab">
        <property name="key" value="files"/>
        <property name="treeContextMenu">
            <bean class="org.jahia.services.uicomponents.bean.toolbar.Toolbar">
                <property name="items">
                    <list>
                        <ref bean="org.jahia.toolbar.item.createFolder"/>
                        <ref bean="org.jahia.toolbar.item.upload"/>
                        <ref bean="org.jahia.toolbar.item.Separator"/>
                        <ref bean="org.jahia.toolbar.item.rename"/>
                        <ref bean="org.jahia.toolbar.item.delete"/>
                    </list>
                </property>
                <property name="contextMenu" value="true"/>
            </bean>
        </property>
        <property name="tableContextMenu">
            <bean class="org.jahia.services.uicomponents.bean.toolbar.Toolbar">
                <property name="items">
                    <list>
                        <ref bean="org.jahia.toolbar.item.download"/>
                        <ref bean="org.jahia.toolbar.item.preview"/>
                        <ref bean="org.jahia.toolbar.item.Separator"/>
                        <ref bean="org.jahia.toolbar.item.rename"/>
                        <ref bean="org.jahia.toolbar.item.delete"/>
                        <ref bean="org.jahia.toolbar.item.Separator"/>
                        <ref bean="org.jahia.toolbar.item.copy"/>
                        <ref bean="org.jahia.toolbar.item.cut"/>
                        <ref bean="org.jahia.toolbar.item.paste"/>
                        <ref bean="org.jahia.toolbar.item.pasteReference"/>
                    </list>
                </property>
                <property name="contextMenu" value="true"/>
            </bean>
        </property>
    </bean>

    <bean id="sidePanelTab.mashups" class="org.jahia.services.uicomponents.bean.editmode.SidePanelTab">
        <property name="key" value="mashups"/>
    </bean>

    <bean id="sidePanelTab.search" class="org.jahia.services.uicomponents.bean.editmode.SidePanelTab">
        <property name="key" value="search"/>

    </bean>

    <bean id="sidePanelTab.workflow" class="org.jahia.services.uicomponents.bean.editmode.SidePanelTab">
        <property name="key" value="workflow"/>

    </bean>

    <!-- Engine tabs-->
    <bean id="editenginestab.content" class="org.jahia.services.uicomponents.bean.editmode.EngineTab">
        <property name="key" value="content"/>
    </bean>

    <bean id="editenginestab.listOrderingContent" class="org.jahia.services.uicomponents.bean.editmode.EngineTab">
        <property name="key" value="listOrderingContent"/>
    </bean>

    <bean id="editenginestab.createpage" class="org.jahia.services.uicomponents.bean.editmode.EngineTab">
        <property name="key" value="createPage"/>
    </bean>

    <bean id="editenginestab.template" class="org.jahia.services.uicomponents.bean.editmode.EngineTab">
        <property name="key" value="template"/>
    </bean>

    <bean id="editenginestab.layout" class="org.jahia.services.uicomponents.bean.editmode.EngineTab">
        <property name="key" value="layout"/>
    </bean>

    <bean id="editenginestab.options" class="org.jahia.services.uicomponents.bean.editmode.EngineTab">
        <property name="key" value="option"/>
    </bean>

    <bean id="editenginestab.rights" class="org.jahia.services.uicomponents.bean.editmode.EngineTab">
        <property name="key" value="rights"/>
    </bean>

    <bean id="editenginestab.usages" class="org.jahia.services.uicomponents.bean.editmode.EngineTab">
        <property name="key" value="usages"/>
    </bean>

    <bean id="editenginestab.metadata" class="org.jahia.services.uicomponents.bean.editmode.EngineTab">
        <property name="key" value="metadata"/>
    </bean>

    <bean id="editenginestab.classification" class="org.jahia.services.uicomponents.bean.editmode.EngineTab">
        <property name="key" value="classification"/>
