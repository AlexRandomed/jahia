                </property>
                <property name="visibility">
                    <bean class="org.jahia.services.uicomponents.bean.Visibility">
                        <property name="siteActionPermission" value="actions/edit-mode"/>
                    </bean>
                </property>
                <property name="contextMenu" value="true"/>
            </bean>
        </property>

        <!-- edit engine -->
        <property name="editEngines">
            <list>
                <bean class="org.jahia.services.uicomponents.bean.editmode.Engine">
                    <property name="nodeType" value="jmix:list"/>
                    <property name="tabs">
                        <list value-type="org.jahia.services.uicomponents.bean.editmode.EngineTab">
                            <value>listOrderingContent</value>
                            <value>template</value>
                            <value>layout</value>
                            <value>metadata</value>
                            <value>classification</value>
                            <value>option</value>
                            <value>rights</value>
                            <value>usages</value>
                            <value>publication</value>
                            <value>workflow</value>
                            <value>seo</value>
                            <value>analytics</value>
                        </list>
                    </property>
                </bean>
                <bean class="org.jahia.services.uicomponents.bean.editmode.Engine">
                    <property name="nodeType" value="nt:base"/>
                    <property name="tabs">
                        <list value-type="org.jahia.services.uicomponents.bean.editmode.EngineTab">
                            <value>content</value>
                            <value>layout</value>
                            <value>metadata</value>
                            <value>classification</value>
                            <value>option</value>
                            <value>rights</value>
                            <value>usages</value>
                            <value>publication</value>
                            <value>workflow</value>
                            <value>seo</value>
                            <value>analytics</value>
                        </list>
                    </property>
                </bean>
            </list>
        </property>

        <!-- create engine-->
        <property name="createEngines">
            <list>
                <bean class="org.jahia.services.uicomponents.bean.editmode.Engine">
                    <property name="nodeType" value="jnt:page"/>
                    <property name="tabs">
                        <list value-type="org.jahia.services.uicomponents.bean.editmode.EngineTab">
                            <value>createPage</value>
                            <value>metadata</value>
                            <value>classification</value>
                            <value>option</value>
                            <value>rights</value>
                        </list>
                    </property>
                </bean>
                <bean class="org.jahia.services.uicomponents.bean.editmode.Engine">
                    <property name="nodeType" value="nt:base"/>
                    <property name="tabs">
                        <list value-type="org.jahia.services.uicomponents.bean.editmode.EngineTab">
                            <value>content</value>
