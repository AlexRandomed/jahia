    <bean id="groupsAdministrationModule" class="org.jahia.admin.users.ManageGroups" parent="abstractAdministrationModule">
        <property name="serverModule" value="false"/>
        <property name="urlKey" value="groups" />
        <property name="permissionName" value="admin.users.ManageGroups" />
        <property name="name" value="groups" />
        <property name="icon" value="users_into" />
        <property name="label" value="label.manageGroups" />
        <property name="urlAction" value="groups" />
        <property name="urlParams" value="&amp;sub=display" />
    </bean>

    <bean id="siteLanguagesAdministrationModule" class="org.jahia.admin.languages.ManageSiteLanguages" parent="abstractAdministrationModule">
        <property name="serverModule" value="false"/>
        <property name="urlKey" value="siteLanguages" />
        <property name="permissionName" value="admin.languages.ManageSiteLanguages" />
        <property name="name" value="languages" />
        <property name="icon" value="signpost" />
        <property name="label" value="label.manageLanguages" />
        <property name="urlAction" value="siteLanguages" />
        <property name="urlParams" value="&amp;sub=display" />
    </bean>

    <bean id="sitePermissionsAdministrationModule" class="org.jahia.admin.permissions.ManageSitePermissions" parent="abstractAdministrationModule">
        <property name="serverModule" value="false"/>
        <property name="urlKey" value="sitePermissions" />
        <property name="permissionName" value="admin.permissions.ManageSitePermissions" />
        <property name="name" value="sitePermissions" />
        <property name="icon" value="security_agent" />
        <property name="label" value="label.siteroles" />
        <property name="urlAction" value="sitePermissions" />
        <property name="urlParams" value="&amp;sub=display" />
    </bean>

    <bean id="htmlEditorsAdministrationModule" class="org.jahia.admin.PlaceholderAdministrationModule" parent="abstractAdministrationModule">
        <property name="serverModule" value="false"/>
        <property name="urlKey" value="htmlsettings" />
        <property name="permissionName" value="admin.htmleditors.HtmlEditorsAdmin" />
        <property name="name" value="htmlsettings" />
        <property name="icon" value="text_rich_colored" />
        <property name="label" value="org.jahia.admin.htmlsettings.label" />
        <property name="urlType" value="struts" />
        <property name="urlAction" value="HtmlSettings" />
        <property name="urlParams" value="&amp;group=htmlsettings&amp;method=display" />
    </bean>

    <bean id="integrityChecksAdministrationModule" class="org.jahia.admin.PlaceholderAdministrationModule" parent="abstractAdministrationModule">
        <property name="serverModule" value="false"/>
        <property name="urlKey" value="integrity" />
        <property name="permissionName" value="admin.integrity.IntegrityChecks" />
        <property name="name" value="integrity" />
        <property name="icon" value="text_ok" />
        <property name="label" value="label.integrityCheck" />
        <property name="urlType" value="struts" />
        <property name="urlAction" value="IntegrityChecks" />
        <property name="urlParams" value="&amp;group=integrity&amp;method=display" />
    </bean>

    <bean id="analyticsAdministrationModule" class="org.jahia.admin.analytics.ManageAnalytics" parent="abstractAdministrationModule">
        <property name="serverModule" value="false"/>
        <property name="urlKey" value="analytics" />
        <property name="permissionName" value="admin.analytics.ManageAnalytics" />
        <property name="name" value="analytics" />
        <property name="icon" value="column-chart" />
        <property name="label" value="org.jahia.admin.manageanalytics.label" />
        <property name="urlAction" value="analytics" />
        <property name="urlParams" value="&amp;sub=display" />
    </bean>

    <bean id="administrationModulesRegistry" class="org.jahia.admin.AdministrationModulesRegistry"/>

