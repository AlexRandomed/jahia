<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean class="org.jbpm.pvm.internal.processengine.SpringHelper" id="springHelper"/>
    <bean id="processEngine" factory-bean="springHelper" factory-method="createProcessEngine" />

    <bean id="jBPMProvider" class="org.jahia.services.workflow.jbpm.JBPMProvider">
        <property name="processEngine" ref="processEngine"/>
        <property name="processes">
            <list>
                <value>org/jahia/services/workflow/2-step-validation.jpdl.xml</value>
            </list>
        </property>
    </bean>
</beans>