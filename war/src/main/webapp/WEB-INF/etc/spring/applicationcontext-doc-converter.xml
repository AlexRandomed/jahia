<?xml version="1.0" encoding="ISO-8859-1"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
       
    <bean id="DocumentConverterService" class="org.jahia.services.transform.DocumentConverterService" init-method="start" destroy-method="stop">
    	<!-- set this to true to enable the service -->
        <property name="enabled" value="false"/>
        <!-- contains the name of the bean that provides configured OfficeManager instance (not the reference to the bean itself) -->
        <property name="officeManagerBeanName" value="officeManagerFactory"/>
    </bean>

    <bean name="officeManagerFactory" class="org.jahia.services.transform.LocalOfficeManagerFactory" lazy-init="true">
        <property name="officeHome" value="/usr/lib/openoffice"/>
    </bean>

    <bean name="converterMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="urlMap">
            <map>
                <entry key="/convert">
                    <bean class="org.jahia.bin.DocumentConverter">
                        <property name="converterService" ref="DocumentConverterService"/>
                        <property name="settingsBean" ref="settingsBean" />
                    </bean>
                </entry>
                <entry key="/toPDF/**">
                    <bean class="org.jahia.bin.ToPDFServlet">
                        <property name="converterService" ref="DocumentConverterService"/>
                    </bean>
                </entry>
            </map>
        </property>
    </bean>

</beans>
