        <exclude-property>jcr:lastModifiedBy</exclude-property>
        <exclude-property>j:lastPublished</exclude-property>
        <exclude-property>j:lastPublishedBy</exclude-property>        
        <exclude-property>j:published</exclude-property>        
    </i18ncopy>
