<table width="100%" border="0" cellpadding="5" cellspacing="0" class="evenOddTable">
  <tbody>
      <tr>
          <td colspan="2">
            <div class="head headtop">
                <div class="object-title"><internal:adminResourceBundle resourceName="org.jahia.admin.generalOptions.label"/></div>
            </div>
          </td>
      </tr>
      <tr class="oddLine">
          <th width="30%"><label for="htmlCleanup"><internal:adminResourceBundle resourceName="org.jahia.admin.htmlsettings.htmlCleanupEnabled.label" defaultValue="HTML Cleanup (with Tidy)"/></label></th>
          <td width="70%"><input type="checkbox" name="htmlCleanup" id="htmlCleanup" ${htmlCleanupEnabled ? 'checked="checked"' : ''}/></td>
      </tr>
      <tr class="evenLine">
          <th><label for="markupFiltering"><internal:adminResourceBundle resourceName="org.jahia.admin.htmlsettings.markupFilteringEnabled.label" defaultValue="Markup Filtering"/></label></th>
          <td>
            <input type="checkbox" name="markupFiltering" id="markupFiltering" ${markupFilteringEnabled ? 'checked="checked"' : ''}/>&nbsp;
            <input type="text" name="markupFilteringTags" id="markupFilteringTags" style="width: 90%" value="${markupFilteringTags}"/>
            <c:set var="info"><internal:adminResourceBundle resourceName="org.jahia.admin.htmlsettings.markupFiltering.info" defaultValue="Please provde a comma-separated list of HTML tags to remove."/></c:set>
            <a href="#preview" onclick="jahia.alert(null, '${info}'); return false;"><img src="${pageContext.request.contextPath}/jsp/jahia/engines/images/about.gif" alt="preview"/></a>
          </td>
      </tr>
  </tbody>
</table>